@prefix rdf:           <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:          <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:           <http://www.w3.org/2002/07/owl#> .
@prefix xsd:           <http://www.w3.org/2001/XMLSchema#> .

@prefix blauwdruk:     <https://example.memorix-test.nl/resources/recordtypes/> .

@prefix sh:            <http://www.w3.org/ns/shacl#> .

@prefix rico:          <https://www.ica.org/standards/RiC/ontology#> .
@prefix ric-rst:       <https://www.ica.org/standards/RiC/vocabularies/recordSetTypes#> .
@prefix ric-dft:       <https://www.ica.org/standards/RiC/vocabularies/documentaryFormTypes#> .

# ==================================================
blauwdruk:Akte a sh:NodeShape, owl:Class ;
    sh:targetClass blauwdruk:Akte ;
    owl:equivalentClass rico:Record ;
    rdfs:label "Akte"@nl ;
    rdfs:comment "Standaard Recordtype voor Akte"@nl ;
    sh:property [
        rdfs:label "Document Type"@nl ;
        sh:path rico:hasDocumentaryFormType ;
        sh:maxCount 1 ;
        sh:class rico:DocumentaryFormType ;
    ] ;
    sh:property [
        rdfs:label "Beschrijving"@nl ;
        sh:path rico:hasOrHadTitle ;
        sh:class rico:Title ;
    ] ;
    sh:property [
        rdfs:label "Datering"@nl ;
        sh:path rico:isAssociatedWithDate ;
        sh:maxCount 1 ;
        sh:class rico:SingleDate ;
    ] ;
    sh:property [
        rdfs:label "Nota bene"@nl ;
        sh:path rico:scopeAndContent ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        rdfs:label "Archiefvormer"@nl ;
        sh:path rico:hasAccumulator ;
        sh:or ( 
            [ sh:class blauwdruk:Persoon ]
            [ sh:class blauwdruk:Organisatie ]
            [ sh:class blauwdruk:Familie ]
        ) ;       
    ] ;
    sh:property [ 
        rdfs:label "Personen"@nl ;
        rdfs:comment "Personen die voorkomen op de akte."@nl ;
        sh:class blauwdruk:Persoon ;
        sh:path rico:hasOrHadSubject 
    ] ;
    sh:property [
        rdfs:label "Interne opmerking"@nl ;
        sh:path blauwdruk:remark ;
        sh:datatype xsd:string ; 
    ] ;
    sh:property [ 
        rdfs:label "Uiterlijke vorm"@nl ;
        sh:maxCount 1 ;
        sh:path rico:recordResourceExtent ;
        sh:datatype xsd:string ; 
    ] ;
    sh:property [
        rdfs:label "Volgende informatieobject in de volgorde"@nl ;
        sh:path rico:precedesOrPreceded ;
        sh:class blauwdruk:Informatieobject ;
    ] ;
    sh:property [
        rdfs:label "Maakt onderdeel uit van"@nl ;
        sh:path rico:isOrWasIncludedIn ;
        sh:class blauwdruk:Bestanddeel ;
    ] ;
    sh:property [
        rdfs:label "Representaties"@nl ;
        sh:minCount 1 ;
        sh:path rico:hasInstantiation ;
        sh:class blauwdruk:Representatie ;
    ] .


# ==========================================
# Standard shapes

## Title
rico:Title a sh:NodeShape ;
    sh:targetClass rico:Title ;
    sh:property [
        rdfs:label "Beschrijving"@nl ;
        sh:message "This node MUST link to exactly 1 xsd:string with rico:textualValue"@en ;
        sh:path rico:textualValue ;
        sh:datatype xsd:string ; 
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        rdfs:label "Type beschrijving"@nl ;
        sh:message "This node MUST link to exactly 1 rico:TitleType with rico:hasTitleType"@en ;
        sh:path rico:hasTitleType ;
        sh:class rico:TitleType ; 
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .

## Identifier
rico:Identifier a sh:NodeShape ;
    sh:targetClass rico:Identifier ;
    sh:property [
        rdfs:label "Identifier"@nl ;
        sh:message "This node MUST link to exactly 1 xsd:string with rico:textualValue"@en ;
        sh:path rico:textualValue ;
        sh:datatype xsd:string ; 
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        rdfs:label "Type identifier"@nl ;
        sh:message "rico:Identifier MUST link to exactly 1 rico:IdentifierType with rico:hasIdentifierType"@en ;
        sh:path rico:hasIdentifierType ;
        sh:class rico:IdentifierType ; 
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .

## Date
rico:DateRange a sh:NodeShape ;
    sh:targetClass rico:DateRange ;
    sh:property [
        rdfs:label "Periode (tekst)"@nl ;
        sh:path rico:expressedDate ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        rdfs:label "Begindatum"@nl ;
        sh:path rico:hasBeginningDate ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class rico:SingleDate ;
    ] ;
    sh:property [
        rdfs:label "Einddatum"@nl ;
        sh:path rico:hasEndDate ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class rico:SingleDate ;
    ] .

rico:SingleDate a sh:NodeShape ;
    sh:targetClass rico:SingleDate ;
    sh:property [
        rdfs:label "Datum (tekst)"@nl ;
        sh:path rico:expressedDate ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        rdfs:label "Datum (genormaliseerd)"@nl ;
        sh:path rico:normalizedDateValue ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:or ( 
            [ sh:datatype xsd:gYear ] 
            [ sh:datatype xsd:gYearMonth ] 
            [ sh:datatype xsd:date ] 
        ) ;
    ] .

## Type
blauwdruk:TypeShape a sh:NodeShape ;
    sh:targetClass rico:IdentifierType, rico:TitleType, rico:RecordState, rico:DocumentaryFormType ;
    sh:property [
        sh:message "rico:*Type MUST link to exactly 1 rico:Name with rico:hasOrHadName"@en ;
        sh:path rico:hasOrHadName ;
        sh:class rico:Name ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .

blauwdruk:NameShape a sh:NodeShape ;
    sh:targetClass  rico:Name ;
    sh:property [
        sh:path rico:textualValue ;
        sh:datatype xsd:string ;
    ] .

