@prefix rdf:           <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:          <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:           <http://www.w3.org/2002/07/owl#> .
@prefix xsd:           <http://www.w3.org/2001/XMLSchema#> .

@prefix blauwdruk:     <https://example.memorix-test.nl/resources/recordtypes/> .

@prefix dc:            <http://purl.org/dc/elements/1.1/> .
@prefix sh:            <http://www.w3.org/ns/shacl#> .
@prefix dash:          <http://datashapes.org/dash#> .
@prefix memorix:       <http://memorix.io/ontology#> .

@prefix rico:          <https://www.ica.org/standards/RiC/ontology#> .
@prefix ric-rst:       <https://www.ica.org/standards/RiC/vocabularies/recordSetTypes#> .
@prefix ric-dft:       <https://www.ica.org/standards/RiC/vocabularies/documentaryFormTypes#> .

# ==================================================
blauwdruk:Afbeelding a memorix:Recordtype, sh:NodeShape, owl:Class ;
    rdfs:comment          "Beeldbankbeschrijvingen Stadsarchief Amsterdam"@nl ;
    rdfs:label            "Afbeelding"@nl ;
    dc:identifier         "Afbeelding" ;
    rdfs:equivalentClass  rico:Record ;
    sh:closed             true ;
    sh:ignoredProperties  ( rdf:type ) ;
    sh:property [
        rdfs:label        "Nummer"@nl ;
        sh:path           rico:hasOrHadIdentifier ;
        sh:group          blauwdruk:Identificatie ;
        sh:order          1.0 ;
        memorix:inTitleAt 1.0 ;
        sh:message        "Afbeelding MUST link at least 1 rico:Identifier with rico:hasOrHadIdentifier"@en ;
        sh:class          rico:Identifier ;
        sh:nodeKind       sh:BlankNode ;
        sh:minCount       1 ;
    ] ;
    sh:property [
        sh:message        "Afbeelding MUST link to at most 1 rico:Title with rico:hasOrHadTitle"@en ;
        rdfs:label        "Titel"@nl ;
        sh:path           rico:hasOrHadTitle ;
        sh:group          blauwdruk:Identificatie ;
        sh:order          2.0 ;
        memorix:inTitleAt 2.0 ;
        sh:class          rico:Title ;
        sh:nodeKind       sh:BlankNode ;
        sh:minCount       1 ;
        sh:maxCount       1 ;
    ] ;
    sh:property [ 
        rdfs:label        "Beschrijving"@nl ;
        sh:message        "Afbeelding CAN link to at most 1 xsd:string or xsd:XMLLiteral with rico:scopeAndContent"@en ;
        sh:message        "Afbeelding KAN linken aan maximaal 1 xsd:string of xsd:XMLLiteral met rico:scopeAndContent"@nl ;
        sh:group          blauwdruk:Beschrijving ;
        sh:order          3.0 ;
        sh:path           rico:scopeAndContent ;
        sh:datatype       xsd:string ; 
        sh:maxCount       1 ;
    ] ;
    sh:property [ 
        rdfs:label        "Afgebeeld onderwerp (straten, adressen, personen, gebouwen, openbare ruimtes)"@nl ;
        sh:message        "Afbeelding CAN link to a external IRI for stuff with rico:hasOrHadSubject"@en ;
        sh:group          blauwdruk:Beschrijving ;
        sh:order          4.0 ;
        sh:path           rico:hasOrHadSubject ;
        sh:nodeKind       sh:IRI ;
    ] ;
    sh:property [
        rdfs:label        "Datering"@nl ;
        sh:path           rico:isAssociatedWithDate ;
        sh:maxCount       1 ;
        sh:group          blauwdruk:Beschrijving  ;
        sh:order          5.0 ;
        sh:class          rico:DateRange ;
        sh:nodeKind       sh:BlankNode ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        rdfs:label        "Nota bene"@nl ;
        sh:path           rico:scopeAndContent ;
        sh:group          blauwdruk:Beschrijving  ;
        sh:order          5.0 ;
        sh:datatype       xsd:string ;
        dash:editor       dash:TextAreaEditor ;
    ] .


# ========================================
# PropertyGroup's

blauwdruk:Identificatie a sh:PropertyGroup ;
    rdfs:label "Identificatie"@nl ;
    sh:order    1.0 .

blauwdruk:Beschrijving a sh:PropertyGroup ;
    rdfs:label "Beschrijving"@nl ;
    sh:order    2.0 .

blauwdruk:Datering a sh:PropertyGroup ;
    rdfs:label "Datering"@nl ;
    sh:order    3.0 .

blauwdruk:Vervaardiging a sh:PropertyGroup ;
    rdfs:label "Archiefvorming"@nl ;
    sh:order    4.0 .


# ==========================================
# Standard shapes

## Title
rico:Title a sh:NodeShape ;
    sh:targetClass rico:Title ;
    sh:closed true ;
    sh:ignoredProperties     ( rdf:type ) ;
    sh:property [
        sh:message        "This node MUST link to exactly 1 xsd:string with rico:textualValue"@en ;
        sh:path           rico:textualValue ;
        rdfs:label        "Waarde"@nl ;
        sh:order          2.0 ;
        sh:datatype       xsd:string ; 
        sh:minCount       1 ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        sh:message        "rico:Title MUST link to exactly 1 rico:TitleType with rico:hasTitleType"@en ;
        sh:path           rico:hasTitleType ;
        rdfs:label        "Type"@nl ;
        sh:order          1.0 ;
        sh:nodeKind       sh:IRI ;
        sh:minCount       1 ;
        sh:maxCount       1 ;
    ] .


## Identifier
rico:Identifier a sh:NodeShape ;
    sh:targetClass rico:Identifier ;
    sh:closed true ;
    sh:ignoredProperties     ( rdf:type ) ;
    sh:property [
        sh:message        "This node MUST link to exactly 1 xsd:string with rico:textualValue"@en ;
        sh:path           rico:textualValue ;
        rdfs:label        "Waarde"@nl ;
        sh:order          2.0 ;
        sh:datatype       xsd:string ; 
        sh:minCount       1 ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        sh:message        "rico:Identifier MUST link to exactly 1 rico:IdentifierType with rico:hasIdentifierType"@en ;
        sh:path           rico:hasIdentifierType ;
        rdfs:label        "Type"@nl ;
        sh:order          1.0 ;
        sh:nodeKind       sh:IRI ;
        sh:minCount       1 ;
        sh:maxCount       1 ;
    ] .

## Date
rico:DateRange a sh:NodeShape ;
    sh:targetClass rico:DateRange ;
    sh:closed true ;
    sh:ignoredProperties     ( rdf:type ) ;
    sh:property [
        rdfs:label "Periode (tekst)"@nl ;
        sh:path rico:expressedDate ;
        sh:order 1.0 ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        rdfs:label "Begindatum"@nl ;
        sh:path rico:hasBeginningDate ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:order 2.0 ;
        sh:class rico:SingleDate ;
        sh:nodeKind sh:BlankNode ;
    ] ;
    sh:property [
        rdfs:label "Einddatum"@nl ;
        sh:path rico:hasEndDate ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:order 3.0 ;
        sh:class rico:SingleDate ;
        sh:nodeKind sh:BlankNode ;
    ] .

rico:SingleDate a sh:NodeShape ;
    sh:targetClass rico:SingleDate ;
    sh:closed true ;
    sh:ignoredProperties     ( rdf:type ) ;
    sh:property [
        rdfs:label "Datum (tekst)"@nl ;
        sh:path rico:expressedDate ;
        sh:order 1.0 ;
        sh:maxCount 1 ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        rdfs:label "Datum (genormaliseerd)"@nl ;
        sh:path rico:normalizedDateValue ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:order 2.0 ;
        sh:or ( [sh:datatype xsd:gYear ]
                [sh:datatype xsd:gYearMonth ]  
                [sh:datatype xsd:date ]  ) ;
    ] .

rico:Instantiation a sh:NodeShape ;
    sh:targetClass rico:Instantiation ;
    sh:closed true ;
    sh:ignoredProperties     ( rdf:type ) ;
    sh:property [
        sh:message        "rico:Instantiation MUST link to exactly 1 rico:InstantiationType with rico:hasInstantiationType"@en ;
        sh:path           rico:hasInstantiationType;
        rdfs:label        "Type"@nl ;
        sh:order          1.0 ;
        sh:nodeKind       sh:IRI ;
        sh:minCount       1 ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        sh:message        "rico:Instantiation MUST link to exactly 1 blauwdruk:vindplaats"@en ;
        sh:path           blauwdruk:vindplaats;
        rdfs:label        "Type"@nl ;
        sh:order          1.0 ;
        sh:nodeKind       sh:IRI ;
        sh:minCount       1 ;
        sh:maxCount       1 ;
        sh:or (
            [ sh:class blauwdruk:Computerbestand ]
        )
    ] .

## rico:Type
blauwdruk:TypeShape a sh:NodeShape ;
    sh:targetClass        rico:IdentifierType, rico:CarrierType, rico:ProductionTechniqueType, rico:DocumentaryFormType, rico:TitleType ;
    sh:property [
        sh:message        "rico:*Type MUST link to exactly 1 rico:Name with rico:hasOrHadName"@en ;
        sh:path           rico:hasOrHadName ;
        sh:class          rico:Name ;
        sh:minCount       1 ;
        sh:maxCount       1 ;
    ] .

## rico:Name
blauwdruk:NameShape a sh:NodeShape ;
    sh:targetClass  rico:Name ;
    sh:property [
        sh:message        "This node MUST link to exactly 1 xsd:string with rico:textualValue"@en ;
        sh:path           rico:textualValue ;
        rdfs:label        "Naam"@nl ;
        sh:datatype       xsd:string ; 
        sh:minCount       1 ;
        sh:maxCount       1 ;
    ] .
