@prefix :              <https://data.archief.amsterdam/blauwdruk#>

@prefix rdf:           <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:          <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:           <http://www.w3.org/2002/07/owl#> .
@prefix xsd:           <http://www.w3.org/2001/XMLSchema#> .

@prefix sh:            <http://www.w3.org/ns/shacl#> .

@prefix rico:          <https://www.ica.org/standards/RiC/ontology#> .
@prefix ric-rst:       <https://www.ica.org/standards/RiC/vocabularies/recordSetTypes#> .
@prefix ric-dft:       <https://www.ica.org/standards/RiC/vocabularies/documentaryFormTypes#> .
@prefix schema:        <http://schema.org/> .


# ==================================================
:Record a sh:NodeShape ;
    sh:targetClass rico:Record ;
    sh:xone ( 
        [ sh:node :Deed ]
        [ sh:node :Image ]
        [ sh:node :DigitalRecord ]
    ) .

# ===== DEED =====
:Deed a sh:NodeShape ;
    rdfs:label "Akte"@nl .

# ===== IMAGE =====
:Image a sh:NodeShape ;
    rdfs:label "Afbeelding"@nl .
    sh:property [
        rdfs:label "Nummer"@nl ;
        sh:path rico:hasOrHadIdentifier ;
        sh:class rico:Identifier ;
        sh:node :IdentifierImage ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        rdfs:label "Titel"@nl ;
        sh:path rico:hasOrHadTitle ;
        sh:class rico:Title ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        rdfs:label "Beschrijving"@nl ;
        sh:path rico:scopeAndContent ;
        sh:datatype xsd:string ; 
        sh:maxCount 1 ;
    ] ;
    sh:property [ 
        rdfs:label "Afgebeeld onderwerp"@nl ;
        sh:path rico:hasOrHadSubject ;
    ] ;
    sh:property [
        rdfs:label "Datering"@nl ;
        sh:path rico:isAssociatedWithDate ;
        sh:maxCount 1 ;
        sh:class rico:DateRange ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        rdfs:label "Nota bene"@nl ;
        sh:path rico:scopeAndContent ;
        sh:datatype xsd:string ;
    ] .


# ==========================================
# Standard shapes

## Title
:Title a sh:NodeShape ;
    sh:property [
        sh:path rico:textualValue ;
        rdfs:label "Waarde"@nl ;
        sh:datatype xsd:string ; 
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path rico:hasTitleType ;
        rdfs:label "Type"@nl ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .


## Identifier
:Identifier a sh:NodeShape ;
    sh:property [
        sh:path rico:textualValue ;
        rdfs:label "Waarde"@nl ;
        sh:dataype xsd:string ; 
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path rico:hasIdentifierType ;
        rdfs:label "Type"@nl ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .

## Date
:DateRange a sh:NodeShape ;
    sh:property [
        rdfs:label "Periode (tekst)"@nl ;
        sh:path rico:expressedDate ;
        sh:order 1.0 ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        rdfs:label "Begindatum"@nl ;
        sh:path rico:hasBeginningDate ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class rico:SingleDate ;
        sh:node :SingleDate ;
    ] ;
    sh:property [
        rdfs:label "Einddatum"@nl ;
        sh:path rico:hasEndDate ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class rico:SingleDate ;
        sh:node :SingleDate ;
    ] .

:SingleDate a sh:NodeShape ;
    sh:property [
        rdfs:label "Datum (genormaliseerd)"@nl ;
        sh:path rico:normalizedDateValue ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:date ;
    ] .

:Instantiation a sh:NodeShape ;
    sh:property [
        sh:path rico:hasInstantiationType;
        rdfs:label "Type"@nl ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
# !!!
        sh:path blauwdruk:vindplaats;
        rdfs:label "Type"@nl ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:or (
            [ sh:class blauwdruk:Computerbestand ]
        )
    ] .

## :Type
:Type a sh:NodeShape ;
    sh:property [
        sh:path rico:hasOrHadName ;
        sh:class rico:Name ;
        sh:node :Name ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .

## :Name
:Name a sh:NodeShape ;
    sh:property [
        sh:path rico:textualValue ;
        rdfs:label "Naam"@nl ;
        sh:dataype  xsd:string ; 
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .

# ===== DIGITAL RECORD =====
:DigitalRecord a sh:NodeShape ;
    rdfs:label "Digitaal informatieobject"@nl .
