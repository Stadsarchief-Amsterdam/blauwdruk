@prefix rdf:           <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:          <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:           <http://www.w3.org/2002/07/owl#> .
@prefix xsd:           <http://www.w3.org/2001/XMLSchema#> .

@prefix blauwdruk:     <https://example.memorix-test.nl/resources/recordtypes/> .
@prefix voc:           <https://example.memorix-test.nl/resources/vocabularies/> .
@prefix data:          <https://example.memorix-test.nl/resources/records/> .

@prefix dc:            <http://purl.org/dc/elements/1.1/> .
@prefix sh:            <http://www.w3.org/ns/shacl#> .
@prefix dash:          <http://datashapes.org/dash#> .
@prefix memorix:       <http://memorix.io/ontology#> .

@prefix rico:          <https://www.ica.org/standards/RiC/ontology#> .
@prefix ric-rst:       <https://www.ica.org/standards/RiC/vocabularies/recordSetTypes#> .
@prefix ric-dft:       <https://www.ica.org/standards/RiC/vocabularies/documentaryFormTypes#> .

# ==================================================
blauwdruk:Archiefblok a memorix:Recordtype, sh:NodeShape, owl:Class ;
    sh:targetClass blauwdruk:Archiefblok ;
    owl:equivalentClass rico:RecordSet ;
    rdfs:label "Archiefblok"@nl ;
    rdfs:comment "Beschrijving van een verzameling bescheiden die gezamenlijk een archiefblok vormen."@nl ;
    sh:property [ 
        sh:message "Archiefblok MUST link to ric-rst:Fonds with rico:hasRecordSetType"@en ,
            "Archiefblok MOET linken naar ric-rst:Fonds met rico:hasRecordSetType"@nl ;
        rdfs:comment "Deze informatie is altijd hetzelfde voor de entiteit Archief."@nl ;
        sh:path rico:hasRecordSetType ;
        sh:hasValue ric-rst:Fonds ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ];
    sh:property [
        rdfs:label "Archiefbloknummer"@nl ;
        sh:path rico:hasOrHadIdentifier ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class rico:Identifier ; 
    ] ;
    sh:property [
        rdfs:label "Archiefbloknaam"@nl ;
        sh:path rico:hasOrHadTitle ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class rico:Title ;
    ] ;
    sh:property [
        rdfs:label "Archiefvormer"@nl ;
        sh:path rico:hasAccumulator ;
        sh:maxCount 1 ;
        sh:or ( 
            [ sh:class blauwdruk:Persoon ]
            [ sh:class blauwdruk:Organisatie ]
            [ sh:class blauwdruk:Familie ]
        ) ;       
    ] ;
    sh:property [
        rdfs:label "Periode van vorming"@nl ;
        sh:path rico:isAssociatedWithDate ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class rico:DateRange ;
    ] ;
    sh:property [
        rdfs:label "Inleiding"@nl ;
        sh:path rico:scopeAndContent ;
        sh:datatype xsd:string ; 
    ] ;
    sh:property [
        rdfs:label "Gerelateerde archieven"@nl ;
        sh:path rdfs:seeAlso ;
        sh:class blauwdruk:Archiefblok ;       
    ] ;
    sh:property [
        rdfs:label "Gerelateerde publicaties"@nl ;
        sh:path rdfs:seeAlso ;
    ] ;
    sh:property [
        rdfs:label "Status"@nl ;
        sh:path rico:isOrWasRecordStateOfAllMembers ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class rico:RecordState ;
    ] ;
    sh:property [
        rdfs:label "Interne opmerking"@nl ;
        sh:path blauwdruk:remark ;
        sh:datatype xsd:string ; 
    ] ;
    sh:property [
        rdfs:label "Inventarisatie"@nl ; 
        sh:minCount 1 ; 
        sh:path rico:isOrWasDescribedBy ;
        sh:class blauwdruk:Inventaris ; 
    ] .

blauwdruk:Inventaris a sh:NodeShape, owl:Class ;
    sh:targetClass blauwdruk:Inventaris ;
    rdfs:equivalentClass rico:Record ;
    sh:property [ 
        sh:message "Inventaris MUST link to ric-dft:FindingAid with rico:hasDocumentaryFormType"@en ,
            "Inventaris MOET linken naar ric-dft:FindingAid met rico:hasDocumentaryFormType"@nl ;
        rdfs:comment "Deze informatie is altijd hetzelfde voor de entiteit Inventaris."@nl ;
        sh:path rico:hasDocumentaryFormType ;
        sh:hasValue ric-dft:FindingAid ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ];
    sh:property [
        rdfs:label "Inventarisator"@nl ;
        sh:message "Inventaris CAN link to at most 1 rico:Person or rico:CorporateBody with rico:hasAuthor"@en ;
        sh:message "Inventaris KAN linken aan maximaal 1 rico:Person or rico:CorporateBody met rico:hasAuthor"@nl ;
        sh:path rico:hasAuthor ;
        sh:or (
            [ sh:class blauwdruk:Persoon ]
            [ sh:class blauwdruk:Organisatie ]
        ) ;     
        sh:maxCount 1 ;
    ] ;
    sh:property [
        # LET OP! Deze moet nog een keer netjes met echte rico:Date's Dat is nog niet goed in RiC-O: ik heb er een issue voor aangemaakt bij de RiC-O ontwikkelaars.
        rdfs:label "Inventarisatiejaar"@nl ;
        sh:message "Inventaris CAN link to at most 1 xsd:gYear with rico:publicationDate"@en ,
            "Inventaris KAN linken naar maximaal 1 xsd:gYear met rico:publicationDate"@nl ;
        sh:path rico:publicationDate ;
        sh:datatype xsd:gYear ; 
        sh:maxCount 1 ;
    ] ;
    sh:property [
        rdfs:label "Verantwoording van de inventarisatie"@nl ;
        sh:message "Inventaris CAN link to 1 xsd:string with rico:history"@en ,
            "Inventaris KAN linken naar 1 xsd:string met rico:history"@nl ;
        sh:path rico:history ;
        sh:datatype xsd:string ; 
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:message "Inventaris MUST link to at exactly 1 rico:CorporateBody with rico:hasPublisher"@en ,
            "Inventaris MOET linken aan precies 1 rico:CorporateBody met rico:hasPublisher"@nl ;
        rdfs:comment "Deze informatie is altijd hetzelfde (namelijk 'Stadsarchief Amsterdam')."@nl ;
        sh:path rico:hasPublisher ;
        sh:hasValue <https://archief.amsterdam/> ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .


# ==========================================
# Standard shapes

## Title
rico:Title a sh:NodeShape ;
    sh:targetClass rico:Title ;
    sh:property [
        rdfs:label "Titel"@nl ;
        sh:message "This node MUST link to exactly 1 xsd:string with rico:textualValue"@en ;
        sh:path rico:textualValue ;
        sh:datatype xsd:string ; 
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        rdfs:label "Type titel"@nl ;
        sh:message "This node MUST link to exactly 1 rico:TitleType with rico:hasTitleType"@en ;
        sh:path rico:hasTitleType ;
        sh:class rico:TitleType ; 
        sh:nodeKind sh:IRI ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .

## Identifier
rico:Identifier a sh:NodeShape ;
    sh:targetClass rico:Identifier ;
    sh:property [
        rdfs:label "Identifier"@nl ;
        sh:message "This node MUST link to exactly 1 xsd:string with rico:textualValue"@en ;
        sh:path rico:textualValue ;
        sh:datatype xsd:string ; 
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        rdfs:label "Type identifier"@nl ;
        sh:message "rico:Identifier MUST link to exactly 1 rico:IdentifierType with rico:hasIdentifierType"@en ;
        sh:path rico:hasIdentifierType ;
        sh:class rico:IdentifierType ; 
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .

## Date
rico:DateRange a sh:NodeShape ;
    sh:targetClass rico:DateRange ;
    sh:property [
        rdfs:label "Periode (tekst)"@nl ;
        sh:path rico:expressedDate ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        rdfs:label "Begindatum"@nl ;
        sh:path rico:hasBeginningDate ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class rico:SingleDate ;
    ] ;
    sh:property [
        rdfs:label "Einddatum"@nl ;
        sh:path rico:hasEndDate ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class rico:SingleDate ;
    ] .

rico:SingleDate a sh:NodeShape ;
    sh:targetClass rico:SingleDate ;
    sh:property [
        rdfs:label "Datum (tekst)"@nl ;
        sh:path rico:expressedDate ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        rdfs:label "Datum (genormaliseerd)"@nl ;
        sh:path rico:normalizedDateValue ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:or ( 
            [ sh:datatype xsd:gYear ] 
            [ sh:datatype xsd:gYearMonth ] 
            [ sh:datatype xsd:date ] 
        ) ;
    ] .

blauwdruk:TypeShape a sh:NodeShape ;
    sh:targetClass        rico:IdentifierType, rico:RecordState, rio:TitleType ;
    sh:property [
        sh:message        "rico:*Type MUST link to exactly 1 rico:Name with rico:hasOrHadName"@en ;
        sh:path           rico:hasOrHadName ;
        sh:class          rico:Name ;
        sh:minCount       1 ;
        sh:maxCount       1 ;
    ] .

blauwdruk:NameShape a sh:NodeShape ;
    sh:targetClass  rico:Name ;
    sh:property [
        sh:path rico:textualValue ;
        sh:datatype xsd:string ;
    ] .
