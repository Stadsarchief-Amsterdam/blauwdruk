@prefix rdf:           <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:          <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:           <http://www.w3.org/2002/07/owl#> .
@prefix xsd:           <http://www.w3.org/2001/XMLSchema#> .

@prefix sh:            <http://www.w3.org/ns/shacl#> .

@prefix rico:          <https://www.ica.org/standards/RiC/ontology#> .
@prefix ric-rst:       <https://www.ica.org/standards/RiC/vocabularies/recordSetTypes#> .
@prefix ric-dft:       <https://www.ica.org/standards/RiC/vocabularies/documentaryFormTypes#> .
@prefix saa:           <https://data.archief.amsterdam/ontology#> . #TBD


# ==================================================
saa:Series a sh:NodeShape ;
    sh:targetClass saa:Series ;
    rdfs:label "Groep"@nl ;
    sh:property [ 
        sh:path rico:hasRecordSetType ;
        sh:hasValue ric-rst:Series ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ];
    sh:property [
        rdfs:label "Groep nummers"@nl ;
        sh:path rico:hasOrHadIdentifier ;
        sh:minCount 1 ;
        sh:class rico:Identifier ;
    ] ;
    sh:property [
        rdfs:label "Beschrijving"@nl ;
        sh:path rico:hasOrHadTitle ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class rico:Title ;
    ] ;
    sh:property [
        rdfs:label "Datering"@nl ;
        sh:path rico:isAssociatedWithDate ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class rico:DateRange ;
    ] ;
    sh:property [
        rdfs:label "Nota bene"@nl ;
        sh:path rico:scopeAndContent ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        rdfs:label "Volgende archiefbeschrijving in de volgorde"@nl ;
        sh:path rico:precedesOrPreceded ;
        sh:or (
            [ sh:class saa:Series ]
            [ sh:class saa:File ]
            [ sh:class saa:DigitalRecord ]
            [ sh:class saa:Deed ]
            [ sh:class saa:Image ]
        )
    ] ;
    sh:property [
        rdfs:label "Maakt onderdeel uit van"@nl ;
        sh:path rico:isOrWasIncludedIn ;
        sh:or (
            [ sh:class saa:Fonds ]
            [ sh:class saa:Series ]
        )
    ] ;
    sh:property [ 
        rdfs:label "Uiterlijke vorm"@nl ;
        sh:maxCount 1 ;
        sh:path rico:physicalOrLogicalExtent ;
        sh:datatype xsd:string ; 
    ] ;
    sh:property [
        rdfs:label "Interne opmerking"@nl ;
        sh:path rico:descriptiveNote ;
        sh:datatype xsd:string ; 
    ] .


# ==========================================
# Standard shapes

## Title
rico:Title a sh:NodeShape ;
    sh:targetClass rico:Title ;
    sh:property [
        rdfs:label "Beschrijving"@nl ;
        sh:path rico:textualValue ;
        sh:datatype xsd:string ; 
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        rdfs:label "Type beschrijving"@nl ;
        sh:path rico:hasTitleType ;
        sh:class rico:TitleType ; 
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .

## Identifier
rico:Identifier a sh:NodeShape ;
    sh:targetClass rico:Identifier ;
    sh:property [
        rdfs:label "Identifier"@nl ;
        sh:path rico:textualValue ;
        sh:datatype xsd:string ; 
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        rdfs:label "Type identifier"@nl ;
        sh:path rico:hasIdentifierType ;
        sh:class rico:IdentifierType ; 
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .

## Date
rico:DateRange a sh:NodeShape ;
    sh:targetClass rico:DateRange ;
    sh:property [
        rdfs:label "Periode (tekst)"@nl ;
        sh:path rico:expressedDate ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        rdfs:label "Begindatum"@nl ;
        sh:path rico:hasBeginningDate ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class rico:SingleDate ;
    ] ;
    sh:property [
        rdfs:label "Einddatum"@nl ;
        sh:path rico:hasEndDate ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class rico:SingleDate ;
    ] .

rico:SingleDate a sh:NodeShape ;
    sh:targetClass rico:SingleDate ;
    sh:property [
        rdfs:label "Datum (genormaliseerd)"@nl ;
        sh:path rico:normalizedDateValue ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:or ( 
            [ sh:datatype xsd:gYear ] 
            [ sh:datatype xsd:gYearMonth ] 
            [ sh:datatype xsd:date ] 
        ) ;
    ] .

## Type
:TypeShape a sh:NodeShape ;
    sh:targetClass rico:IdentifierType, rico:TitleType ;
    sh:property [
        sh:path rico:hasOrHadName ;
        sh:class rico:Name ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .

:NameShape a sh:NodeShape ;
    sh:targetClass  rico:Name ;
    sh:property [
        sh:path rico:textualValue ;
        sh:datatype xsd:string ;
    ] .
