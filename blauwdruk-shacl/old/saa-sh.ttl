@prefix rdf:           <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:          <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:           <http://www.w3.org/2001/XMLSchema#> .

@prefix sh:            <http://www.w3.org/ns/shacl#> .

@prefix rico:          <https://www.ica.org/standards/RiC/ontology#> .
@prefix ric-rst:       <https://www.ica.org/standards/RiC/vocabularies/recordSetTypes#> .
@prefix ric-dft:       <https://www.ica.org/standards/RiC/vocabularies/documentaryFormTypes#>

@prefix crm:           <http://www.cidoc-crm.org/cidoc-crm/> .

@prefix saa-ont:       <https://data.archief.amsterdam/ontology#> .
@prefix saa-sh:        <https://data.archief.amsterdam/shapes#> .
@prefix saa-voc:       <https://data.archief.amsterdam/vocabulary#> .

# INVENTARIS
saa-sh:InventarisShape a sh:NodeShape ;
    sh:targetClass        saa-ont:Inventaris ;
    sh:property [
        sh:message        "Inventaris MUST link to ric-dft:FindingAid with rico:hasDocumentaryFormType"@en ;
        sh:message        "Inventaris MOET linken naar ric-dft:FindingAid met rico:hasDocumentaryFormType"@nl ;
        rdfs:comment      "Deze informatie is altijd hetzelfde en wordt daarom niet door beschrijvers in Memorix ingevoerd, maar moet standaard bij een export worden toegevoegd."@nl ;
        sh:path           rico:hasDocumentaryFormType ;
        sh:in             ( ric-dft:FindingAid ) ;
        sh:minCount       1 ;
        sh:maxCount       1 ;
    ];
    sh:property [
        sh:message        "Inventaris CAN link to at most 1 rico:Person or rico:CorporateBody with rico:hasAuthor"@en ;
        sh:message        "Inventaris KAN linken aan maximaal 1 rico:Person or rico:CorporateBody met rico:hasAuthor"@nl ;
        rdfs:label        "Inventarisatie door:"@nl ;
        rdfs:comment      ""@nl ;
        sh:path           rico:hasAuthor ;
        sh:or (
            [ sh:nodeKind sh:IRI ; ]
            [ sh:class    rico:Person ; ]
            [ sh:class    rico:CorporateBody ; ]
        ) ;
        sh:minCount       0 ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        # LET OP! Deze moet nog een keer netjes met echte rico:Date's
        sh:message        "Inventaris CAN link to at most 1 xsd:date or xsd:gYear with rico:publicationDate"@en ;
        sh:message        "Inventaris KAN linken naar maximaal 1 xsd:date of xsd:gYear met rico:publicationDate"@nl ;
        rdfs:label        "Inventarisatiejaar"@nl ;
        rdfs:comment      ""@nl ;
        sh:path           rico:publicationDate ;
        sh:or (
            [ sh:datatype xsd:date ] 
            [ sh:datatype xsd:gYear ] 
        ) ;
        sh:minCount       0 ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        sh:message        "Inventaris CAN link to 1 xsd:string or xsd:XMLLiteral with rico:history"@en ;
        sh:message        "Inventaris KAN linken naar 1 xsd:string of xsd:XMLLiteral met rico:history"@nl ;
        rdfs:label        "Verantwoording van de inventarisatie"@nl ;
        rdfs:comment      ""@nl ;
        sh:path           rico:history ;
        sh:or (
            [ sh:datatype xsd:string ; ]
            [ sh:datatype rdf:XMLLiteral ; ]
        ) ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        sh:message        "Inventaris MUST link to at exactly 1 rico:CorporateBody with rico:hasPublisher"@en ;
        sh:message        "Inventaris MOET linken aan precies 1 rico:CorporateBody met rico:hasPublisher"@nl ;
        rdfs:comment      "Deze informatie is altijd hetzelfde (namelijk 'Stadsarchief Amsterdam') en wordt daarom niet door beschrijvers in Memorix ingevoerd, maar moet standaard bij een export worden toegevoegd."@nl ;
        sh:path           rico:hasPublisher ;
        sh:or (
            [ sh:nodeKind sh:IRI ; ]
            [ sh:class    rico:CorporateBody ; ]
        ) ;
        sh:minCount       1 ;
        sh:maxCount       1 ;
    ] .


# ARCHIEF
saa-sh:ArchiefShape a sh:NodeShape ;
    # maps from <[memorix-base-url]/resources/recordtypes/Archiefblok>
    sh:targetClass        saa-ont:Archief ;
    sh:property [
        sh:message        "Archief MUST link to ric-rst:Fonds with rico:hasRecordSetType"@en ;
        sh:message        "Archief MOET linken aan ric-rst:Fonds met rico:hasRecordSetType"@nl ;
        rdfs:comment      "Deze informatie is altijd hetzelfde en wordt daarom niet door beschrijvers in Memorix ingevoerd, maar moet standaard bij een export worden toegevoegd."@nl ;
        sh:path           rico:hasRecordSetType ;
        sh:in             ( ric-rst:Fonds ) ;
        sh:minCount       1 ;
        sh:maxCount       1 ;
    ];
    sh:property [
        sh:message        "Archief MUST link at least 1 saa-ont:Nummer with rico:hasOrHadIdentifier"@en ;
        sh:message        "Archief MOET linken aan tenminste 1 saa-ont:Nummer with rico:hasOrHadIdentifier"@nl ;
        rdfs:label        "Nummer toegang (eventueel met toevoeging)"@nl ;
        rdfs:comment      "Dit nummer kan bestaan uit twee onderdelen: een numeriek deel en de 'toevoeging': een alfanumeriek deel. Het numeriek deel is verplicht."@nl ;
        sh:path           rico:hasOrHadIdentifier ;
        sh:qualifiedValueShape [
            sh:class          saa-ont:Nummer ;
        ];
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
    ] ;
    sh:property [
        sh:message        "Archief MUST link to exactly 1 rico:Title with rico:hasOrHadTitle"@en ;
        sh:message        "Archief MOET linken naar precies 1 rico:Title met rico:hasOrHadTitle"@nl ;
        rdfs:label        "Beschrijving toegang"@nl ;
        rdfs:comment      "Bv. Archief van de familie van Lennep"@nl ;
        sh:path           rico:hasOrHadTitle ;
        sh:class          rico:Title ;
        sh:minCount       1 ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        sh:message        "Archief MUST link to exactly 1 rico:SingleDate or rico:DateRange with rico:isAssociatedWithDate"@en ;
        sh:message        "Archief MOET linken naar precies 1 rico:SingleDate of rico:DateRange met rico:isAssociatedWithDate"@nl ;
        rdfs:label        "Datering"@nl ;
        rdfs:comment      "De datering kan bestaan uit een losse datum of een begin- en einddatum. De datum mag een jaartal zijn of een complete datum. Er is een apart veld voor textuele invoer, waarin bijvoorbeeld 'ca. 1830' kan worden ingevoerd."@nl ;
        sh:path           rico:isAssociatedWithDate ;
        sh:or (
            [ sh:class          rico:SingleDate ; ]
            [ sh:class          rico:DateRange ; ]
        ) ;
        sh:minCount       1 ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        sh:message        "Archief MUST link to exactly 1 rico:Agent (Archiefbeheerder) with rico:hasOrHadHolder"@en ;
        sh:message        "Archief MOET linken naar precies 1 rico:Agent (Archiefbeheerder) with rico:hasOrHadHolder"@nl ;
        rdfs:comment      "Deze informatie is altijd hetzelfde (namelijk 'Stadsarchief Amsterdam') en wordt daarom niet door beschrijvers in Memorix ingevoerd, maar moet standaard bij een export worden toegevoegd."@nl ;
        sh:path           rico:hasOrHadHolder ;
        sh:or (
            [ sh:nodeKind       sh:IRI ; ]
            [ sh:class          rico:Person ; ]
            [ sh:class          rico:CorporateBody ; ]
            [ sh:class          rico:Family ; ]
        ) ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        sh:message        "Archief CAN link to 1 xsd:string or xsd:XMLLiteral with rico:scopeAndContent"@en ;
        sh:message        "Archief KAN linken naar 1 xsd:string of xsd:XMLLiteral met rico:scopeAndContent"@nl ;
        rdfs:label        "Inleiding"@nl ;
        rdfs:comment      "Allerlei losse informatie over het archief als geheel is meestal opgenomen in de 'inleiding'. Deze kan in een later stadium worden opgeknipt in de verschillende onderdelen."@nl ;
        sh:path           rico:scopeAndContent ;
        sh:or (
            [sh:datatype  xsd:string ; ]
            [sh:datatype  rdf:XMLLiteral ; ]
        ) ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        sh:message        "Archief MUST link to at least 1 rico:Agent with rico:hasAccumulator"@en ;
        sh:message        "Archief MOET linken naar ten minste 1 rico:Agent met rico:hasAccumulator"@nl ;
        rdfs:label        "Archiefvormer"@nl ;
        rdfs:comment      "Een archief heeft ten minste een archiefvormer deze is opgenomen in de lijst van personen en instellingen. Met deze property wordt de verwijzing naar deze lijst opgenomen."@nl ;
        sh:path           rico:hasAccumulator ;
        sh:or (
            [ sh:nodeKind       sh:IRI ; ]
            [ sh:class          rico:Person ; ]
            [ sh:class          rico:CorporateBody ; ]
            [ sh:class          rico:Family ; ]
        ) ;
        sh:minCount       1 ;
    ] ;
    sh:property [
        sh:message        "Archief MUST link to at least 1 saa-ont:Inventaris with rico:isOrWasDescribedBy"@en ;
        sh:message        "Archief MOET linken naar tenminste 1 saa-ont:Inventaris met rico:isOrWasDescribedBy"@nl ;
        rdfs:label        "Blok Inventarisatie"@nl ;
        rdfs:comment      "Het blok Inventarisatie bevat data die in RiC-O is vastgelegd in de metadata over de 'Inventaris', gedefinieerd als saa-ont:Inventaris. Als er nieuwe informatie over de inventarisatie is, is er een in RiC-O termen een nieuwe Inventaris aangemaakt. Er zijn dan meerdere 'Inventarissen' aan het Archief gekoppeld."@nl ;
        sh:path           rico:isOrWasDescribedBy ;
        sh:class          saa-ont:Inventaris ;
        sh:minCount       1 ;
    ].

# VERZAMELING
saa-sh:VerzamelingShape a sh:NodeShape ;
    # maps from <[memorix-base-url]/resources/recordtypes/Verzameling>
    sh:targetClass        saa-ont:Verzameling ;
    sh:property [
        sh:message        "Verzameling MUST link to ric-rst:Series with rico:hasRecordSetType"@en ;
        sh:message        "Verzameling MOET linken naar ric-rst:Series met rico:hasRecordSetType"@nl ;
        rdfs:comment      "Deze informatie is altijd hetzelfde en wordt daarom niet door beschrijvers in Memorix ingevoerd, maar moet standaard bij een export worden toegevoegd."@nl ;
        sh:path           rico:hasRecordSetType ;
        sh:in             ( ric-rst:Series ) ;
        sh:minCount       1 ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        sh:message        "Verzameling MUST link at least 1 rico:Identifier with rico:hasOrHadIdentifier"@en ;
        sh:message        "Verzameling MOET linken naar ten minste 1 rico:Identifier met rico:hasOrHadIdentifier"@nl ;
        rdfs:label        "Rubriekscode"@nl ;
        rdfs:comment      "TBD: is dit een 'onderwerp' of het nummer van een Verzameling?"@nl ;
        sh:path           rico:hasOrHadIdentifier ;
        sh:class          rico:Identifier ;
        sh:minCount       1 ;
    ] ;
    sh:property [
        sh:message        "Verzameling MUST link to exactly 1 rico:Title with rico:hasOrHadTitle"@en ;
        sh:message        "Verzameling MOET linken naar precies 1 rico:Title with rico:hasOrHadTitle"@nl ;
        rdfs:label        "Beschrijving"@nl ;
        rdfs:comment      "Een Verzameling heeft een beknopte beschrijving, die in het geval van een oude inventaris dienst doet als kopje."@nl ;
        sh:path           rico:hasOrHadTitle ;
        sh:class          rico:Title ;
        sh:minCount       1 ;
        sh:maxCount       1 ;
    ]; 
    sh:property [
        sh:message        "Verzameling MUST link to exactly 1 saa-ont:Verzameling or saa-ont:Archief with rico:isOrWasIncludedIn"@en ;
        sh:message        "Verzameling MOET linken naar precies 1 saa-ont:Verzameling of saa-ont:Archief met rico:isOrWasIncludedIn"@nl ;
        rdfs:label        "Parent"@nl ;
        rdfs:comment      "Een Verzameling maakt onderdeel uit van een Archief of is de 'sub'Verzameling van een andere Verzameling."@nl ;
        sh:path           rico:isOrWasIncludedIn ;
        sh:or (
            [ sh:class saa-ont:Verzameling ] 
            [ sh:class saa-ont:Archief ] 
        ) ;
        sh:minCount       1 ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        sh:message        "Verzameling CAN link to 1 following rico:RecordSet (Verzameling or Bestanddeel) with rico:precedesOrPreceded"@en ;
        sh:message        "Verzameling KAN linken naar 1 volgende rico:RecordSet (Verzameling of Bestanddeel) met rico:precedesOrPreceded"@nl ;
        rdfs:label        "Volgende"@nl ;
        rdfs:comment      "In een oude archiefinventaris is de volgorde waarin de Verzamelingen ('rubrieken, verzamelbeschrijvingen') zijn opgenomen relevant. Deze volgorde kan met deze eigenschap worden vastgelegd door te verwijzen naar de volgende in de reeks."@nl ;
        sh:path           rico:precedesOrPreceded ;
        sh:or (
            [ sh:class saa-ont:Verzameling ] 
            [ sh:class saa-ont:Bestanddeel ] 
        ) ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        sh:message        "Verzameling CAN link to at most 1 rico:SingleDate or rico:DateRange with rico:isAssociatedWithDate"@en ;
        sh:message        "Verzameling KAN linken naar maximaal 1 rico:SingleDate of rico:DateRange met rico:isAssociatedWithDate"@nl ;
        rdfs:label        "Datering"@nl ;
        rdfs:comment      "De datering kan bestaan uit een losse datum of een begin- en einddatum. De datum mag een jaartal zijn of een complete datum. Er is een apart veld voor textuele invoer, waarin bijvoorbeeld 'ca. 1830' kan worden ingevoerd."@nl ;
        sh:path           rico:isAssociatedWithDate ;
        sh:or (
            [ sh:class          rico:SingleDate ; ]
            [ sh:class          rico:DateRange ; ]
        ) ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        sh:message        "Verzameling CAN link to 1 or more rico:Instantiation with rico:hasInstantiation"@en ;
        sh:message        "Verzameling KAN linken naar 1 of meer rico:Instantiation met rico:hasInstantiation"@nl ;
        rdfs:label        ""@nl ;
        rdfs:comment      "De uiterlijke vorm van een verzamelbeschrijving maakt onderdeel uit van de beschrijving van de fysieke, (papieren) representatie. Daarom wordt deze in de data geintroduceerd en wordt deze daar opgenomen."@nl ;
        sh:path           rico:hasInstantiation ;
        sh:nodeKind       sh:IRI ;    
    ] .


# BESTANDDEEL
saa-sh:BestanddeelShape a sh:NodeShape ;
    # maps from <[memorix-base-url]/resources/recordtypes/Bestanddeel>
    sh:targetClass        saa-ont:Bestanddeel ;
    sh:property [
        sh:message        "Bestanddeel MUST link to ric-rst:File with rico:hasRecordSetType"@en ;
        sh:message        "Bestanddeel MOET linken naar ric-rst:File met rico:hasRecordSetType"@nl ;
        rdfs:comment      "Deze informatie is altijd hetzelfde en wordt daarom niet door beschrijvers in Memorix ingevoerd, maar moet standaard bij een export worden toegevoegd."@nl ;
        sh:path           rico:hasRecordSetType ;
        sh:in             ( ric-rst:File ) ;
        sh:minCount       1 ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        sh:message        "Bestanddeel MUST link exactly 1 saa-ont:Nummer with rico:hasOrHadIdentifier"@en ;
        sh:message        "Bestanddeel MOET linken aan precies 1 saa-ont:Nummer with rico:hasOrHadIdentifier"@nl ;
        rdfs:label        "Inventarisnummer (eventueel met toevoeging)"@nl ;
        rdfs:comment      "Dit nummer kan bestaan uit twee onderdelen: een numeriek deel en de 'toevoeging': een alfanumeriek deel. Het numeriek deel is verplicht."@nl ;        
        sh:path           rico:hasOrHadIdentifier ;
        sh:qualifiedValueShape [
            sh:class          saa-ont:Nummer ;
        ];
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
    ] ;
    sh:property [
        sh:message        "Bestanddeel CAN link to a rico:Identifier with rico:hasOrHadIdentifier"@en ;
        sh:message        "Bestanddeel KAN linken naar een rico:Identifier met rico:hasOrHadIdentifier"@nl ;
        rdfs:label        "Alternatieve identifier"@nl ;
        rdfs:comment      "Met dit veld kunnen allerlei soorten nummers en identifiers aan het Bestanddeel worden gekoppeld. Waaronder het 'oude nummer'."@nl ;
        sh:path           rico:hasOrHadIdentifier ;
        sh:qualifiedValueShape [
            sh:class          rico:Identifier ;
        ];
        sh:qualifiedMaxCount 1 ;
    ] ;
    sh:property [
        sh:message        "Bestanddeel MUST link to at least 1 saa-ont:Verzameling or saa-ont:Archief with rico:isOrWasIncludedIn"@en ;
        sh:message        "Bestanddeel MOET linken naar ten minste 1 saa-ont:Verzameling of saa-ont:Archief met rico:isOrWasIncludedIn"@nl ;
        rdfs:label        "Parent"@nl ;
        rdfs:comment      "Een bestanddeel maakt altijd deel uit van ofwel een archief ofwel een Verzameling binnen het archief. Het kan bij meerdere archieven ondergebracht zijn."@nl ;
        sh:path           rico:isOrWasIncludedIn ;
        sh:or (
            [ sh:class saa-ont:Verzameling ] 
            [ sh:class saa-ont:Archief ] 
        ) ;
        sh:minCount       1 ;
    ] ;
    sh:property [
        sh:message        "Bestanddeel CAN link to 1 following rico:RecordSet (Verzameling or Bestanddeel) with rico:precedesOrPreceded"@en ;
        sh:message        "Bestanddeel KAN linken naar 1 volgende rico:RecordSet (Verzameling or Bestanddeel) with rico:precedesOrPreceded"@nl ;
        rdfs:label        "Volgende"@nl ;
        rdfs:comment      "In een oude archiefinventaris is de volgorde waarin de Bestanddelen zijn opgenomen relevant. Deze volgorde kan met deze eigenschap worden vastgelegd door te verwijzen naar de volgende in de reeks."@nl ;
        sh:path           rico:precedesOrPreceded ;
        sh:or (
            [ sh:class saa-ont:Verzameling ] 
            [ sh:class saa-ont:Bestanddeel ] 
        ) ;
        sh:maxCount       1 ;
    ] ;
    sh:or ( 
        [
            sh:message        "Bestanddeel MUST link to exactly 1 rico:Title and/or exactly 1 rico:Date"@en ;
            sh:message        "Bestanddeel MOET linken naar precies 1 rico:Title en/of rico:Date"@nl ;
            rdfs:label        "Beschrijving"@nl ;
            rdfs:comment      "In een oude inventaris bevat een deelbeschrijving meestal alleen een datering. Daarom is tenminste een beschrijving of een datering verplicht. Allebei mag ook."@nl ;
            sh:path           rico:hasOrHadTitle ;
            sh:class          rico:Title ;
            sh:minCount       1 ;
            sh:maxCount       1 ;
        ] 
        [
            sh:message        "Bestanddeel MUST link to exactly 1 rico:Title and/or exactly 1 rico:Date"@en ;
            sh:message        "Bestanddeel MOET linken naar precies 1 rico:Title en/of rico:Date"@nl ;
            rdfs:label        "Datering"@nl ;
            rdfs:comment      "In een oude inventaris bevat een deelbeschrijving meestal alleen een datering. Daarom is tenminste een beschrijving of een datering verplicht. Allebei mag ook."@nl ;
            sh:path           rico:isAssociatedWithDate ;
            sh:or (
                [ sh:class          rico:SingleDate ; ]
                [ sh:class          rico:DateRange ; ]
            ) ;
            sh:minCount       1 ;
            sh:maxCount       1 ;
        ] 
    ) ;   
    sh:property [
        sh:message        "Bestanddeel CAN link to at most 1 xsd:string with rico:scopeAndContent"@en ;
        sh:message        "Bestanddeel KAN linken naar maximaal 1 xsd:string met rico:scopeAndContent"@nl ;
        rdfs:label        "TBD: Nadere beschrijving"@nl ;
        rdfs:comment      "TBD: dit zou wmb de 'NB' zijn."@nl ;
        sh:path           rico:scopeAndContent ;
        sh:or (
            [sh:datatype  xsd:string ; ]
            [sh:datatype  rdf:XMLLiteral ; ]
        ) ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        sh:message        "Bestanddeel CAN link to 1 or more rico:Agent with rico:hasAccumulator"@en ;
        sh:message        "Bestanddeel KAN linken naar 1 of meer rico:Agent met rico:hasAccumulator"@nl ;
        rdfs:label        "Archiefvormer"@nl ;
        rdfs:comment      "De archiefvormer van het gehele archief is vastgelegd bij Archief. Soms is een specifiekere archiefvormer bekend. Deze wordt bij het bestanddeel opgenomen."@nl ;
        sh:path           rico:hasAccumulator ;
        sh:or (
            [ sh:nodeKind       sh:IRI ; ]
            [ sh:class          rico:Person ; ]
            [ sh:class          rico:CorporateBody ; ]
            [ sh:class          rico:Family ; ]
        ) ;
    ] ;
    sh:property [
        sh:message        "Bestanddeel CAN link to 1 or more rico:Instantiation with rico:hasInstantiation"@en ;
        sh:message        "Bestanddeel KAN linken naar 1 of meer rico:Instantiation met rico:hasInstantiation"@nl ;
        rdfs:label        ""@nl ;
        rdfs:comment      "De uiterlijke vorm van een enkelvoudige of deelbeschrijving maakt onderdeel uit van de beschrijving van de fysieke, (papieren) representatie. Daarom wordt deze in de data geintroduceerd en wordt deze daar opgenomen."@nl ;
        sh:path           rico:hasInstantiation ;
        sh:nodeKind       sh:IRI ;    
    ] .


# INFORMATIEOBJECT
saa-sh:InformatieobjectShape a sh:NodeShape ;
    # maps from <[memorix-base-url]/resources/recordtypes/Akte>
    sh:targetClass        saa-ont:Informatieobject ;
    sh:property [
        sh:message        "Informatieobject CAN link to at most 1 saa-voc:* with rico:hasDocumentaryFormType"@en ;
        sh:path           rico:hasDocumentaryFormType ;
        sh:or (
            [ sh:in       ( saa-voc:NotarialDeed saa-voc:BirthCertificate saa-voc:Letter saa-voc:BuildingPermit saa-voc:Machtiging saa-voc:Foto saa-voc:Email saa-voc:Rapportage saa-voc:Brief ) ]
            [ sh:class    rico:DocumentaryFormType ]
        ) ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        sh:message        "Informatieobject MUST link at least 1 rico:Identifier with rico:hasOrHadIdentifier"@en ;
        sh:path           rico:hasOrHadIdentifier ;
        sh:class          rico:Identifier ;
        sh:minCount       1 ;
    ] ;
    sh:property [
        sh:message        "Informatieobject CAN link to at most 1 rico:Title with rico:hasOrHadTitle"@en ;
        sh:path           rico:hasOrHadTitle ;
        sh:class          rico:Title ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        sh:message        "Informatieobject CAN link to at most 1 xsd:string with rico:scopeAndContent"@en ;
        sh:path           rico:scopeAndContent ;
        sh:or (
            [sh:datatype  xsd:string ; ]
            [sh:datatype  rdf:XMLLiteral ; ]
        ) ;
        sh:maxCount       1 ;
    ] ;    
    sh:property [
        sh:message        "Informatieobject CAN link to at most 1 rico:SingleDate or rico:DateRange with rico:isAssociatedWith"@en ;
        sh:path           rico:isAssociatedWithDate ;
        sh:or (
            [ sh:class          rico:SingleDate ; ]
            [ sh:class          rico:DateRange ; ]
        ) ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        sh:message        "Informatieobject MUST link to 1 saa-ont:Bestanddeel with rico:isOrWasIncludedIn"@en ;
        sh:path           rico:isOrWasIncludedIn ;
        sh:class          saa-ont:Bestanddeel ;
        sh:minCount       1 ;
        sh:maxCount       1 ;
    ] ;
    sh:property [
        sh:message        "Informatieobject CAN link to 1 or more owl:Thing with rico:hasOrHadSubject"@en ;
        sh:path           rico:hasOrHadSubject ;
        sh:nodeKind       sh:IRI ;    
    ] .

# INFORMATIEOBJECTONDERDEEL
saa-sh:InformatieonderdeelobjectShape a sh:NodeShape ;
    sh:targetClass        saa-ont:Informatieobjectonderdeel ;
    sh:property [
        sh:message        "Informatieobjectonderdeel MUST link at least 1 rico:Identifier with rico:hasOrHadIdentifier"@en ;
        sh:path           rico:hasOrHadIdentifier ;
        sh:class          rico:Identifier ;
        sh:minCount       1 ;
    ] ;
