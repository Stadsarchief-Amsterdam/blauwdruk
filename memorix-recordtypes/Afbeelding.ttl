recordtypes:Image a memorix:Recordtype,
                         sh:NodeShape,
                         rdfs:Class ;
    rdfs:label           "Afbeelding"@nl, "Image"@en ;
    rdfs:comment         "Beeldbankbeschrijvingen Stadsarchief Amsterdam"@nl ;
    dc:identifier        "Image" ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:targetClass       recordtypes:Image ;
    sh:property          [ rdfs:label              "Type afbeelding"@nl ;
                           rdfs:comment            "Selecteer een waarde uit de lijst."@nl ;
                           sh:path                 rico:hasDocumentaryFormType ;
                           sh:maxCount             1 ;
                           sh:order                1.0 ;
                           sh:group                image:contentDescriptionGroup ;
                           dash:editor             memorix:VocabularyEditor ;
                           memorix:inTitleAt       2.0 ;
                           sh:class                skos:Concept ;
                           memorix:conceptSchemeIn vocabularies:3765628c-d755-3e25-8af5-f6178cbb7937 ; #replaced by uuid in code
                           sh:nodeKind             sh:IRI ; ] ;
    sh:property          [ rdfs:label        "Titel"@nl ;
                           rdfs:comment      "Geef de afbeelding een herkenbare titel om in overzichten te kunnen onderscheiden."@nl ;
                           html:placeholder  "Typ een titel â€¦"@nl ;
                           sh:path           rico:title ;
                           memorix:inTitleAt 1.0 ;
                           dash:editor       dash:TextAreaEditor ;
                           dash:singleLine   false ;
                           sh:minCount       1 ;
                           sh:maxCount       1 ;
                           sh:order          2.0 ;
                           sh:message        "De titel zou niet leeg mogen zijn"@nl,
                                             "Empty value for title field should not be allowed"@en ;
                           sh:group          image:contentDescriptionGroup ;
                           dash:editor       dash:TextFieldEditor ;
                           sh:datatype       xsd:string ; ] ;
    sh:property          [ rdfs:label      "Historische titel"@nl ;
                           rdfs:comment    "De historische titel zoals oorspronkelijk vastgelegd."@nl ;
                           sh:path         image:historicalTitle ;
                           dash:editor     dash:TextAreaEditor ;
                           dash:singleLine false ;
                           sh:maxCount     1 ;
                           sh:order        3.0 ;
                           sh:group        image:contentDescriptionGroup ;
                           dash:editor     dash:TextFieldEditor ;
                           sh:datatype     xsd:string ; ] ;
    sh:property          [ rdf:type        sh:PropertyShape ;
                           rdfs:label      "Beschrijving"@nl ;
                           sh:path         rico:scopeAndContent ;
                           sh:maxCount     1 ;
                           sh:order        4.0 ;
                           sh:group        image:contentDescriptionGroup ;
                           dash:editor     dash:TextAreaEditor ;
                           dash:singleLine false ;
                           sh:datatype     xsd:string ; ] ;
    sh:property          [ rdfs:label  "Afgebeeld persoon"@nl ;
                           sh:path     image:hasOrHadSubjectPerson ;
                           sh:maxCount 100 ;
                           sh:order    5.0 ;
                           sh:group    image:contentDescriptionGroup ;
                           dash:editor memorix:LinkedRecordEditor ;
                           sh:nodeKind sh:IRI ;
                           sh:or       ( [ sh:class recordtypes:Person ] ) ;
                         ] ;
    sh:property          [ rdfs:label              "Afgebeeld gebouw"@nl ;
                           sh:path                 image:hasOrHadSubjectBuilding ;
                           sh:order                6.0 ;
                           sh:message              "Invalid building reference."@en,
                                                   "Ongeldige referentie naar Gebouw"@nl ;
                           sh:group                image:contentDescriptionGroup ;
                           sh:maxCount             100 ;
                           dash:editor             memorix:VocabularyEditor ;
                           sh:class                skos:Concept ;
                           memorix:conceptSchemeIn vocabularies:95d82b74-948f-34a1-9938-e25b13397d34 ;
                           sh:nodeKind             sh:IRI ; ] ;
    sh:property          [ rdfs:label   "Afgebeeld adres"@nl ;
                           rdfs:comment "Afgebeelde straatnamen en huisnummers"@nl ;
                           sh:class     image:DepictedAddress ;
                           sh:path      image:hasOrHadSubjectAddress ;
                           sh:order     7.0 ;
                           sh:maxCount  100 ;
                           sh:nodeKind  sh:BlankNode ;
                           sh:group     image:contentDescriptionGroup ; ] ;
    sh:property          [ rdfs:label   "Vervaardiging"@nl ;
                           rdfs:comment "Vervaardiging event"@nl ;
                           sh:path      image:creation ;
                           sh:order     8.0 ;
                           sh:maxCount  1 ;
                           sh:nodeKind  sh:BlankNode ;
                           sh:class     image:CreationEvent ;
                           sh:group     image:contentDescriptionGroup ;
                         ] ;
    sh:property          [ rdfs:label  "Kenmerken"@nl ;
                           sh:path     rico:hasInstantiation ;
                           sh:order    1.0 ;
                           sh:maxCount 1 ;
                           sh:nodeKind sh:BlankNode ;
                           sh:class    rico:Instantiation ;
                           sh:group    image:physicalDescriptionGroup ; ] ;
    sh:property          [ rdfs:label   "Inventarisnummer"@nl ;
                           rdfs:comment "Tijdelijke link om straks te kunnen koppelen aan het juiste bestanddeel"@nl ;
                           sh:path      image:inventoryNumber ;
                           sh:datatype  xsd:string ;
                           sh:maxCount  1 ;
                           sh:order     1.0 ;
                           sh:group     image:managementGroup ; ] ;
    sh:property          [ rdfs:label              "Collectie"@nl ;
                           rdfs:comment            "Tijdelijke oplossing voor het nu kunnen zien van de collectie naam (uit het archiefblok)."@nl ;
                           sh:path                 image:collection ;
                           sh:maxCount             1 ;
                           sh:order                2.0 ;
                           sh:group                image:managementGroup ;
                           memorix:inSummaryAt     1.0 ;
                           dash:editor             memorix:VocabularyEditor ; # Petra: moet dit niet een LinkedRecordEditor zijn?
                           sh:class                skos:Concept ;
                           memorix:conceptSchemeIn vocabularies:dc4bc4f7-0e8a-3d53-b675-7c36bd780aff ;
                           sh:nodeKind             sh:IRI ; ] ;
    sh:property          [ rdfs:label  "Oude nummers"@nl ;
                           dash:editor dash:TextAreaEditor ;
                           sh:path     image:oldNumbers ;
                           sh:datatype xsd:string ;
                           sh:maxCount 1 ;
                           sh:order    3.0 ;
                           sh:group    image:managementGroup ; ] ;
    sh:property          [ rdfs:label  "Interne opmerking"@nl ;
                           sh:path     image:internalRemarks ;
                           sh:datatype xsd:string ;
                           sh:order    4.0 ;
                           sh:group    image:managementGroup ;
                           dash:editor dash:TextAreaEditor ; ] ;
    sh:property          [ rdfs:label              "Externe locatie URI's" ;
                           dash:editor             memorix:VocabularyEditor ;
                           memorix:conceptSchemeIn <http://data.beeldengeluid.nl/gtaa#geografische-namen>,
                                                   <https://www.wikidata.org#entities-streets>,
                                                   <https://example.memorix-test.nl/vocabularies/conceptschemes/a4863c0c-d9e5-3902-831a-d0960e381a41> ; # tijdelijk: de straten
                           sh:class                skos:Concept ;
                           sh:group                image:relationsGroup ;
                           sh:nodeKind             sh:IRI ;
                           sh:order                1.0 ;
                           sh:maxCount             100 ;
                           sh:path                 image:hasOrHadSubjectLocation ] ; 
.

rico:Instantiation
    a                    sh:NodeShape ;
    sh:targetClass       rico:Instantiation ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label  "Drager"@nl ;
                           sh:path     rico:hasCarrierType ;
                           sh:datatype xsd:string ;
                           sh:order    1.0 ; ] ;
    sh:property          [ rdfs:label  "Technieken"@nl ;
                           sh:path     rico:hasProductionTechniqueType ;
                           sh:datatype xsd:string ;
                           sh:order    2.0 ; ] ;
    sh:property          [ rdfs:label  "Materialen"@nl ;
                           sh:path     rico:physicalCharacteristics ;
                           sh:datatype xsd:string ;
                           sh:order    3.0 ; ] ;
    sh:property          [ rdfs:label  "Afmetingen van de drager"@nl ;
                           sh:path     rico:hasExtent ;
                           sh:datatype xsd:string ;
                           sh:order    4.0 ; ] ;
.

image:DepictedAddress
    a                    sh:NodeShape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:targetClass       image:DepictedAddress ;
    rdfs:subClassOf      rico:Place ;
    sh:property          [ rdfs:label              "Straatnaam"@nl ;
                           sh:path                 image:street ;
                           sh:order                1.0 ;
                           sh:maxCount             1 ;
                           dash:editor             memorix:VocabularyEditor ;
                           memorix:conceptSchemeIn vocabularies:a4863c0c-d9e5-3902-831a-d0960e381a41 ;
                           sh:class                skos:Concept ;
                           sh:nodeKind             sh:IRI ; ] ;
    sh:property          [ rdfs:label  "Huisnummer van"@nl ;
                           sh:path     image:houseNumberBegin ;
                           sh:order    2.0 ;
                           sh:maxCount 1 ;
                           sh:datatype xsd:string ; ] ;
    sh:property          [ rdfs:label  "Huisnummer tot"@nl ;
                           sh:path     image:houseNumberEnd ;
                           sh:order    3.0 ;
                           sh:maxCount 1 ;
                           sh:datatype xsd:string ; ] .

image:CreationEvent
    a                    sh:NodeShape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:targetClass       image:CreationEvent ;
    rdfs:subClassOf      rico:Event ;
    sh:property          [ rdfs:label  "Vervaardiger(s)"@nl ;
                           sh:path     image:creators ;
                           sh:class    image:Creator ;
                           sh:nodeKind sh:BlankNode ;
                           sh:maxCount 100 ;
                           sh:order    1.0 ;
                         ] ;
    sh:property          [ rdfs:label  "Datum vervaardiging (tekst)"@nl ;
                           sh:path     image:creationEventDateText ;
                           sh:datatype xsd:string ;
                           sh:maxCount 1 ;
                           sh:order    2.0 ;
                         ] ;
    sh:property          [ rdfs:label  "Vervaardigingsdatum van"@nl ;
                           sh:path     image:creationEventDateFrom ;
                           sh:maxCount 1 ;
                           sh:order    3.0 ;
                           dash:editor memorix:DateEditor ;
                           sh:datatype xsd:integer ;
                         ] ;
    sh:property          [ rdfs:label  "Vervaardigingsdatum tot"@nl ;
                           sh:path     image:creationEventDateUntil ;
                           sh:maxCount 1 ;
                           sh:order    4.0 ;
                           dash:editor memorix:DateEditor ;
                           sh:datatype xsd:integer ;
                         ]
.

image:Creator
    rdf:type             sh:NodeShape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label  "Rol vervaardiger"@nl ;
                           dash:editor             memorix:VocabularyEditor ;
                           memorix:conceptSchemeIn vocabularies:0dada355-9e1e-4f1f-8d86-0455d6067bb7 ; # todo kun je hier een invoeren ipv een uuid?
                           sh:class                skos:Concept ;
                           sh:nodeKind             sh:IRI ;
                           sh:order    1.0 ;
                           sh:path     image:creatorRole ;
                         ] ;
    sh:property          [ rdfs:label  "Vervaardiger"@nl ;
                           dash:editor memorix:LinkedRecordEditor ;
                           sh:nodeKind sh:IRI ;
                           sh:or       ( [ sh:class recordtypes:Person ] [ sh:class recordtypes:Organisation ] ) ;
                           sh:order    2.0 ;
                           sh:path     image:creationEventCreator ;
                         ] ;
    sh:targetClass       image:Creator
.


