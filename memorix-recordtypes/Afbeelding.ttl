rico:Instantiation
    a                    sh:NodeShape ;
    sh:targetClass       rico:Instantiation ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label  "Drager"@nl, "Carrier"@en ;
                           sh:path     rico:hasCarrierType ;
                           sh:datatype xsd:string ;
                           sh:order    1.0 ;
                         ] ;
    sh:property          [ rdfs:label  "Technieken"@nl, "Techniques"@en ;
                           sh:path     rico:hasProductionTechniqueType ;
                           sh:datatype xsd:string ;
                           sh:order    2.0 ;
                         ] ;
    sh:property          [ rdfs:label  "Materialen"@nl, "Materials"@en ;
                           sh:path     rico:physicalCharacteristics ;
                           sh:datatype xsd:string ;
                           sh:order    3.0 ;
                         ] ;
    sh:property          [ rdfs:label  "Afmetingen van de drager"@nl, "Carrier dimensions"@en ;
                           sh:path     rico:hasExtent ;
                           sh:datatype xsd:string ;
                           sh:order    4.0 ;
                         ] ;
.

image:DepictedAddress
    a                    sh:NodeShape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:targetClass       image:DepictedAddress ;
    rdfs:subClassOf      rico:Place ;
    sh:property          [ rdfs:label              "Straatnaam"@nl, "Street name"@en ;
                           sh:path                 image:street ;
                           sh:order                1.0 ;
                           sh:maxCount             1 ;
                           dash:editor             memorix:VocabularyEditor ;
                           memorix:conceptSchemeIn vocabularies:a4863c0c-d9e5-3902-831a-d0960e381a41 ;
                           sh:class                skos:Concept ;
                           sh:nodeKind             sh:IRI ;
                         ] ;
    sh:property          [ rdfs:label  "Huisnummer van"@nl, "Housenumber from"@en ;
                           sh:path     image:houseNumberBegin ;
                           sh:order    2.0 ;
                           sh:maxCount 1 ;
                           sh:datatype xsd:string ;
                         ] ;
    sh:property          [ rdfs:label  "Huisnummer tot"@nl, "Housenumber to"@en ;
                           sh:path     image:houseNumberEnd ;
                           sh:order    3.0 ;
                           sh:maxCount 1 ;
                           sh:datatype xsd:string ;
                         ] .

image:CreationEvent
    a                    sh:NodeShape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:targetClass       image:CreationEvent ;
    rdfs:subClassOf      rico:Event ;
    sh:property          [ rdfs:label  "Vervaardiger(s)"@nl, "Creators"@en ;
                           sh:path     image:creators ;
                           sh:class    image:Creator ;
                           sh:nodeKind sh:BlankNode ;
                           sh:maxCount 100 ;
                           sh:order    1.0 ;
                         ] ;
    sh:property          [ rdfs:label  "Datum vervaardiging (tekst)"@nl, "Creation date (text)"@en ;
                           sh:path     image:creationEventDateText ;
                           sh:datatype xsd:string ;
                           sh:maxCount 1 ;
                           sh:order    2.0 ;
                         ] ;
    sh:property          [ rdfs:label  "Vervaardigingsdatum van"@nl, "Creation date (begin)"@en ;
                           sh:path     image:creationEventDateFrom ;
                           sh:maxCount 1 ;
                           sh:order    3.0 ;
                           dash:editor memorix:DateEditor ;
                           sh:datatype xsd:integer ;
                         ] ;
    sh:property          [ rdfs:label  "Vervaardigingsdatum tot"@nl, "Creation date (end)"@en ;
                           sh:path     image:creationEventDateUntil ;
                           sh:maxCount 1 ;
                           sh:order    4.0 ;
                           dash:editor memorix:DateEditor ;
                           sh:datatype xsd:integer ;
                         ]
.

image:Creator
    rdf:type             sh:NodeShape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label              "Rol vervaardiger"@nl, "Role creatior"@en ;
                           dash:editor             memorix:VocabularyEditor ;
                           memorix:conceptSchemeIn vocabularies:0dada355-9e1e-4f1f-8d86-0455d6067bb7 ;
                           sh:class                skos:Concept ;
                           sh:nodeKind             sh:IRI ;
                           sh:order                1.0 ;
                           sh:path                 image:creatorRole ;
                         ] ;
    sh:property          [ rdfs:label  "Vervaardiger"@nl, "Creator"@en ;
                           dash:editor memorix:LinkedRecordEditor ;
                           sh:nodeKind sh:IRI ;
                           sh:or       ( [ sh:class rt:Person ] [ sh:class rt:Organisation ] ) ;
                           sh:order    2.0 ;
                           sh:path     image:creationEventCreator ;
                         ] ;
    sh:targetClass       image:Creator
.



