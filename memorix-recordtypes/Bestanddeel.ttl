                            sh:class                skos:Concept ;
                            sh:maxCount             50 ;
                            sh:nodeKind             sh:IRI ;
                            sh:order                6.0 ;
                            sh:path                 saa:material ;
                         ] ;
    sh:property          [ rdfs:label  "Afmetingen"@nl, "Dimensions"@en ;
                           sh:maxCount 1 ;
                           sh:path     rico:hasExtent ;
                           sh:datatype xsd:string ;
                           sh:order    7.0 ;
                         ] ;
