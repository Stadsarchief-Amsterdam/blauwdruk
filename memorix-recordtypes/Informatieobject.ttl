@prefix dc:             <http://purl.org/dc/elements/1.1/> .
@prefix sh:             <http://www.w3.org/ns/shacl#> .
@prefix rdf:            <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:           <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dash:           <http://datashapes.org/dash#> .
@prefix xsd:            <http://www.w3.org/2001/XMLSchema#> .
@prefix skos:           <http://www.w3.org/2004/02/skos/core#> .
@prefix html:           <http://www.w3.org/1999/xhtml/> .
@prefix memorix:        <http://memorix.io/ontology#> .
@prefix vocabularies:   </resources/vocabularies/conceptschemes/> .
@prefix rt:             </resources/recordtypes/> .
@prefix io:             </resources/recordtypes/DigitalRecord#> .
@prefix saa:            <https://data.archief.amsterdam/ontology#> . #TBD
@prefix rico:           <https://www.ica.org/standards/RiC/ontology#> .
@prefix ric-rst:        <https://www.ica.org/standards/RiC/vocabularies/recordSetTypes#> .
@prefix ric-dft:        <https://www.ica.org/standards/RiC/vocabularies/documentaryFormTypes#> .

rt:DigitalRecord
    a                               memorix:Recordtype , sh:NodeShape ;
    rdfs:label                      "Digitaal informatieobject"@nl , "Digital Record"@en;
    rdfs:comment                    "Beschrijvingen van computerbestanden Stadsarchief Amsterdam"@nl ;
    dc:identifier                   "DigitalRecord" ;
    sh:closed                       true ;
    sh:ignoredProperties            ( rdf:type ) ;
    sh:targetClass                  rt:DigitalRecord ;
    sh:property                     [ rdfs:label              "Type document"@nl , "Document Type"@en ;
                                      rdfs:comment            "Selecteer een waarde uit de lijst."@nl , "Select a value from the list"@en ;
                                      sh:path                 rico:hasDocumentaryFormType ;
                                      sh:maxCount             1 ;
                                      sh:order                1.0 ;
                                      sh:group                io:contentDescriptionGroup ;
                                      dash:editor             memorix:VocabularyEditor ;
                                      sh:class                skos:Concept ;
                                      memorix:conceptSchemeIn vocabularies:3765628c-d755-3e25-8af5-f6178cbb7937 ; #replaced by uuid in code
                                      sh:nodeKind             sh:IRI ; ] ;
    sh:property                     [ rdfs:label              "Titel"@nl , "Title"@en ;
                                      sh:path                 rico:title ;
                                      memorix:inTitleAt       1.0 ;
                                      sh:minCount             1 ;
                                      sh:maxCount             1 ;
                                      sh:order                2.0 ;
                                      sh:message              "De titel zou niet leeg mogen zijn"@nl, "Empty value for title field should not be allowed"@en ;
                                      sh:group                io:contentDescriptionGroup ;
                                      dash:editor             dash:TextFieldEditor ;
                                      sh:datatype             xsd:string ; ] ;
    sh:property                     [ rdf:type                sh:PropertyShape ;
                                      rdfs:label              "Beschrijving"@nl , "Description"@en;
                                      sh:path                 rico:scopeAndContent ;
                                      sh:order                3.0 ;
                                      sh:group                io:contentDescriptionGroup ;
                                      dash:editor             dash:TextAreaEditor ;
                                      dash:singleLine         false ;
                                      sh:datatype             xsd:string ; ] ;
    sh:property          [ rdfs:label  "Bijzonderheid"@nl, "Details"@en ;
                           sh:class    saa:Detail ;
                           sh:group    io:contentDescriptionGroup ;
                           sh:maxCount 10 ;
                           sh:nodeKind sh:BlankNode ;
                           sh:order    4.0 ;
                           sh:path     saa:detail ] ;
    sh:property                     [ rdfs:label          "Datering"@nl , "Dates"@en;
                                      rdfs:comment        "Kan een exacte datum (vul dan twee keer dezelfde datum in) of een periode zijn"@nl , "Can be a specific date (than fill in the same date twice) or a daterange"@en ;
                                      memorix:inSummaryAt 1 ;
                                      sh:class            rico:DateRange ;
                                      sh:nodeKind         sh:BlankNode ;
                                      sh:group            io:contentDescriptionGroup ;
                                      sh:maxCount         1 ;
                                      sh:order            5.0 ;
                                      sh:path             rico:isAssociatedWithDate ] ;
    sh:property          [ rdfs:label  "Gerelateerd persoon of organisatie"@nl, "Related person or organisation"@en  ;
                           sh:path     saa:isAssociatedWithAgent ;
                           sh:maxCount 100 ;
                           sh:order    6.0 ;
                           sh:group    io:contentDescriptionGroup ;
                           dash:editor memorix:LinkedRecordEditor ;
                           sh:nodeKind sh:IRI ;
                           sh:or       ( [ sh:class rt:Person ] [ sh:class rt:Organization ]  ) ; ] ;
    sh:property          [ rdfs:label  "Gerelateerd plaats"@nl, "Related plaats"@en  ;
                           sh:path     rico:isAssociatedWithPlace ;
                           sh:maxCount 100 ;
                           sh:order    7.0 ;
                           sh:group    io:contentDescriptionGroup ;
                           dash:editor memorix:LinkedRecordEditor ;
                           sh:nodeKind sh:IRI ;
                           sh:or       ( [ sh:class rt:Location ] ) ; ] ;
    sh:property          [            rdfs:label   "Bovenliggend archiefblok, groep of bestanddeel"@nl , "Parental fonds, series or file."@en ;
                                      rdfs:comment "Archiefblok, groep of bestanddeel waartoe dit informatieobject behoort."@nl , "Fonds, series or file of which this digital record is part of."@en;
                                      sh:message   "Kies een archiefblok, groep of bestanddeel om aan te koppelen. Dit is verplicht."@nl , "Choose a fonds, series or file to relate to. This is mandatory.";
                                      dash:editor  memorix:LinkedRecordEditor ;
                                      sh:group     io:partitionGroup ;
                                      sh:minCount  1 ;
                                      sh:maxCount  1 ;
                                      sh:nodeKind  sh:IRI ;
                                      sh:or        ( [ sh:class rt:Fonds ] [ sh:class rt:Series ] [ sh:class rt:File] ) ;
                                      sh:order     8.0 ;
                                      sh:path      rico:isOrWasIncludedIn ] ;
    sh:property                     [ rdfs:label              "Nummer"@nl, "Identifier"@en ;
                                      sh:path                 rico:hasOrHadIdentifier ;
                                      sh:class                rico:Identifier ;
                                      sh:nodeKind             sh:BlankNode ;
                                      sh:order                9.0 ;
                                      sh:group                io:managementGroup ; ] ;
    sh:property                     [ rdfs:label              "Interne opmerkingen"@nl, "Internal Remarks"@en ;
                                      sh:path                 saa:internalRemarks ;
                                      sh:datatype             xsd:string ;
                                      sh:order                10.0 ;
                                      sh:group                io:managementGroup ;
                                      dash:editor             dash:TextAreaEditor ; ] ;
    sh:property                     [ rdfs:label          "Activiteit"@nl , "Activity"@en;
                                      rdfs:comment        ""@nl , ""@en ;
                                      sh:class            rico:Activity ;
                                      sh:nodeKind         sh:BlankNode ;
                                      sh:group            io:managementGroup ;
                                      sh:order            11.0 ;
                                      sh:path             rico:isAssociatedWithEvent ] ;
.

io:contentDescriptionGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Inhoudelijke beschrijving"@nl, "Content Description"@en ;
    sh:order   1.0 ;
.

io:managementGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Beheer"@nl , "Manage"@en ;
    sh:order  2.0 ;
.

io:partitionGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Indeling"@nl , "Partitioning"@en ;
    sh:order   3.0 ;
.

## Identifier
rico:Identifier a sh:NodeShape ;
    sh:targetClass rico:Identifier ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property [
        rdfs:label "Identifier"@nl ;
        sh:message "This node MUST link to exactly 1 xsd:string with rico:textualValue"@en ;
        sh:path rico:textualValue ;
        sh:order    1.0 ;
        sh:datatype xsd:string ; 
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        rdfs:label "Type identifier"@nl ;
        sh:message "rico:Identifier MUST link to exactly 1 rico:IdentifierType with rico:hasIdentifierType"@en ;
        sh:path rico:hasIdentifierType ;
        sh:order    2.0 ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] 
.

## DateRange
rico:DateRange
    rdf:type             sh:NodeShape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label  "Datum (tekst)"@nl, "Date (text)"@en ;
                           sh:datatype xsd:string ;
                           sh:order    1.0 ;
                           sh:path     rico:expressedDate ] ;
    sh:property          [ rdfs:label  "Begindatum"@nl, "Beginning Date"@en ;
                           sh:datatype xsd:date ;
                           sh:order    2.0 ;
                           sh:path     rico:hasBeginningDate ] ;
    sh:property          [ rdfs:label  "Einddatum"@nl, "End Date"@en ;
                           sh:datatype xsd:date ;
                           sh:order    3.0 ;
                           sh:path     rico:hasEndDate ] ;
    sh:targetClass       rico:DateRange ;
.

## Activity
rico:Activity
    rdf:type             sh:NodeShape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property [
        rdfs:label "Geplande activiteit"@nl ;
        sh:message ""@en ;
        sh:order    1.0 ;
        sh:path rico:hasActivityType ;
        sh:nodeKind sh:IRI ; 
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        rdfs:label "Datering activiteit"@nl , "Dates"@en;
        rdfs:comment        "Kan een exacte datum (vul dan twee keer dezelfde datum in) of een periode zijn"@nl , "Can be a specific date (than fill in the same date twice) or a daterange"@en ;
        sh:message ""@en ;
        sh:path rico:isAssociatedWithDate ;
        sh:order    2.0 ;
        sh:class            rico:DateRange ;
        sh:nodeKind         sh:BlankNode ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        rdfs:label "Grondslag"@nl , "Reason/background of the activity"@en;
        sh:path saa:activityBackground ;
        sh:datatype xsd:string ;
        sh:order    3.0 ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:targetClass       rico:Activity ;
.

## Detail
saa:Detail
    rdf:type             sh:NodeShape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label  "Bijzonderheid - Type"@nl, "Detail type"@en ;
                           sh:datatype xsd:string ;
                           sh:order    1.0 ;
                           sh:path     saa:detailType
                         ] ;
    sh:property          [ rdfs:label  "Bijzonderheid"@nl, "Detail"@en ;
                           sh:datatype xsd:string ;
                           sh:order    2.0 ;
                           sh:path     saa:detailTextualValue
                         ] ;
    sh:targetClass       saa:Detail ;
.
