@prefix rdf:            <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:           <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:            <http://www.w3.org/2002/07/owl#> .
@prefix xsd:            <http://www.w3.org/2001/XMLSchema#> .
@prefix skos:           <http://www.w3.org/2004/02/skos/core#> .

@prefix rt:             </resources/recordtypes/> .
@prefix person:         </resources/recordtypes/Person#> .

@prefix dc:             <http://purl.org/dc/elements/1.1/> .
@prefix sh:             <http://www.w3.org/ns/shacl#> .
@prefix dash:           <http://datashapes.org/dash#> .
@prefix memorix:        <http://memorix.io/ontology#> .
@prefix html:           <http://www.w3.org/1999/xhtml/> .

@prefix rico:           <https://www.ica.org/standards/RiC/ontology#> .
@prefix ric-rst:        <https://www.ica.org/standards/RiC/vocabularies/recordSetTypes#> .
@prefix ric-dft:        <https://www.ica.org/standards/RiC/vocabularies/documentaryFormTypes#> .

@prefix pnv:            <https://w3id.org/pnv#> .
@prefix schema:         <http://schema.org/> .


person:identificationGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Identificatie"@nl ;
    sh:order   1.0 ;
.

person:alternativeGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Ook bekend als"@nl ;
    sh:order   2.0 ;
.

person:managementGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Beheer"@nl ;
    sh:order   3.0 ;
.

rt:Person
    rdf:type             memorix:Recordtype , rdfs:Class , sh:NodeShape ;
    rdfs:comment         "Stadsarchief recordtype voor Persoon"@nl ;
    rdfs:label           "Persoon"@nl, "Person"@en ;
    dc:identifier        "Person" ;
    sh:targetClass       rt:Persoon ;
    rdfs:subClassOf      rico:Person , schema:Person , pnv:Person ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label               "Voornaam"@nl ;
                           dash:singleLine          true ; # zouden we dit overal moeten toevoegen of is dit de default?
                           memorix:inTitleAt        3.0 ;
                           memorix:searchWeight     3.0 ;
                           sh:datatype              xsd:string ;
                           sh:group                 person:identificationGroup ;
                           sh:maxCount              1 ;
                           sh:order                 1.0 ;
                           sh:path                  pnv:givenName ] ;
    sh:property          [ rdfs:label               "Tussenvoegsel"@nl ;
                           dash:singleLine          true ;
                           memorix:inTitleAt        2.0 ;
                           memorix:searchWeight     3.0 ;
                           sh:datatype              xsd:string ;
                           sh:group                 person:identificationGroup ;
                           sh:maxCount              1 ;
                           sh:order                 2.0 ;
                           sh:path                  pnv:surnamePrefix ] ;
    sh:property          [ rdfs:label               "Achternaam"@nl ;
                           dash:singleLine          true ;
                           memorix:inTitleAt        1.0 ;
                           memorix:searchWeight     3.0 ;
                           sh:datatype              xsd:string ;
                           sh:group                 person:identificationGroup ;
                           sh:maxCount              1 ;
                           sh:order                 3.0 ;
                           sh:path                  pnv:baseSurname ] ;
    sh:property          [ rdfs:label               "Geboortejaar"@nl ;
                           rdfs:comment             "Geef een jaartal"@nl ;
                           sh:datatype              xsd:gYear ;
                           sh:minInclusive          "1200"^^xsd:gYear ;
                           sh:maxInclusive          "2200"^^xsd:gYear ;
                           memorix:inTitleAt        4.0 ;
                           memorix:inSummaryAt      1.0 ;
                           sh:group                 person:identificationGroup ;
                           sh:order                 4.0 ;
                           sh:path                  schema:birthDate ] ;
    sh:property          [ rdfs:label               "Geboorteplaats"@nl ;
                           dash:editor              dash:TextFieldEditor ;
                           sh:datatype              xsd:string ;
                           sh:group                 person:identificationGroup ;
                           sh:order                 5.0 ;
                           sh:path                  schema:birthPlace ] ;
    sh:property          [ rdfs:label               "Overlijdensjaar"@nl ;
                           rdfs:comment             "Geef een jaartal"@nl ;
                           memorix:inSummaryAt      2.0 ;
                           sh:datatype              xsd:gYear ;
                           sh:minInclusive          "1200"^^xsd:gYear ;
                           sh:maxInclusive          "2200"^^xsd:gYear ;
                           sh:group                 person:identificationGroup ;
                           sh:order                 6.0 ;
                           sh:path                  schema:deathDate ] ;
    sh:property          [ rdfs:label               "Overlijdensplaats"@nl ;
                           dash:editor              dash:TextFieldEditor ;
                           sh:datatype              xsd:string ;
                           memorix:inTitleAt        5.0 ;
                           sh:group                 person:identificationGroup ;
                           sh:order                 7.0 ;
                           sh:path                  schema:deathPlace ] ;
    sh:property          [ rdfs:label               "Alternatieve namen"@nl ;
                           memorix:searchWeight     1.0 ;
                           sh:datatype              xsd:string ;
                           sh:group                 person:alternativeGroup ;
                           sh:order                 1.0 ;
                           sh:path                  schema:alternateName ] ;
    sh:property          [ rdfs:label               "Identiek aan (RKD Artists)"@nl ;
                           dash:editor              memorix:VocabularyEditor ;
                           memorix:conceptSchemeIn  <https://data.rkd.nl/rkdartists> ;
                           memorix:searchWeight     1.0 ;
                           sh:class                 skos:Concept ;
                           sh:group                 person:alternativeGroup ;
                           sh:maxCount              1 ;
                           sh:nodeKind              sh:IRI ;
                           sh:order                 2.0 ;
                           sh:path                  owl:sameAs ] ;
    sh:property          [ rdfs:label               "Interne opmerking"@nl ;
                           dash:editor              dash:TextAreaEditor ;
                           sh:datatype              xsd:string ;
                           sh:group                 person:managementGroup ;
                           sh:order                 1.0 ;
                           sh:path                  person:internalRemarks ; ] ;
    sh:property          [ rdfs:label               "Bibliotheek descriptor?"@nl ;
                           rdfs:comment             "Of deze naam afkomstig is uit de bibliotheek descriptoren lijst."@nl ;
                           sh:datatype              xsd:boolean ;
                           sh:group                 person:managementGroup ;
                           sh:order                 2.0 ;
                           sh:path                  person:originallyFromLibrary ; ] ;
.
