@prefix rdf:            <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:           <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:            <http://www.w3.org/2002/07/owl#> .
@prefix xsd:            <http://www.w3.org/2001/XMLSchema#> .
@prefix skos:           <http://www.w3.org/2004/02/skos/core#> .

@prefix rt:             </resources/recordtypes/> .
@prefix acquisition:    </resources/recordtypes/Acquisition#> .

@prefix dc:             <http://purl.org/dc/elements/1.1/> .
@prefix sh:             <http://www.w3.org/ns/shacl#> .
@prefix dash:           <http://datashapes.org/dash#> .
@prefix memorix:        <http://memorix.io/ontology#> .
@prefix html:           <http://www.w3.org/1999/xhtml/> .
@prefix vocabularies:   </resources/vocabularies/conceptschemes/> .

@prefix rico:           <https://www.ica.org/standards/RiC/ontology#> .
@prefix ric-rst:        <https://www.ica.org/standards/RiC/vocabularies/recordSetTypes#> .
@prefix ric-dft:        <https://www.ica.org/standards/RiC/vocabularies/documentaryFormTypes#> .


acquisition:identificationGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Identificatie"@nl ;
    sh:order   1.0 .

acquisition:contentDescriptionGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Beschrijving"@nl ;
    sh:order   2.0 .

acquisition:partitionGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Indeling"@nl ;
    sh:order   3.0 .

acquisition:managementGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Beheer"@nl ;
    sh:order   4.0 .

rt:Acquisition
    rdf:type                        memorix:Recordtype,
                                    sh:NodeShape ;
    #rdfs:label                      "Aanwinst"@nl, "Acquisition"@en ; #change after randomness is fixed
    rdfs:label                      "Aanwinst"@nl ;
    rdfs:comment                    "Stadsarchief recordtype voor Aanwinst"@nl ;
    dc:identifier                   "Acquisition" ;
    sh:targetClass                  rt:Acquisition ;
    sh:closed                       true ;
    sh:ignoredProperties            ( rdf:type ) ;
    memorix:hasInformationComponent memorix:DepotLocationComponent ;
    sh:property                     [ rdfs:label        "Identificatiecode"@nl ;
                                      rdfs:comment      "Unieke nummer dat correspondeert met de mappenstructuur waarin de AVO-dossiers bewaard worden."@nl ;
                                      sh:message        "Vul tenminste een (uniek) nummer in, bijvoorbeeld 2022-123. Een nummer is verplicht."@nl ;
                                      html:placeholder  "B.v. 2021-345"@nl ;
                                      dash:singleLine   true ;
                                      memorix:inTitleAt 1.0 ;
                                      sh:group          acquisition:identificationGroup ;
                                      sh:minCount       1 ;
                                      sh:maxCount       1 ;
                                      sh:datatype       xsd:string ;
                                      sh:order          1.0 ;
                                      sh:path           acquisition:identifier ] ;
    sh:property                     [ rdfs:label      "Jaar van overdracht"@nl ;
                                      rdfs:comment    "Jaar dat het archief wordt overgedragen."@nl ;
                                      sh:message      "Vul tenminste een jaartal in. Dit is verplicht."@nl ;
                                      sh:datatype     xsd:integer ;
                                      sh:minInclusive 1800 ;
                                      sh:maxInclusive 2200 ;
                                      sh:minCount     1 ;
                                      sh:maxCount     1 ;
                                      sh:group        acquisition:identificationGroup ;
                                      sh:order        2.0 ;
                                      sh:path         acquisition:yearOfTransfer ] ;
    sh:property                     [ rdfs:label   "Datum ontvangst"@nl ;
                                      rdfs:comment "Daadwerkelijke datum van ontvangst"@nl ;
                                      dash:editor  memorix:DateEditor ;
                                      sh:datatype  xsd:integer ;
                                      sh:group     acquisition:contentDescriptionGroup ;
                                      sh:order     1.0 ;
                                      sh:path      acquisition:dateReceived ] ;
    sh:property                     [ rdfs:label  "Contact (persoon of organisatie)"@nl ;
                                      sh:path     acquisition:contact ;
                                      sh:order    2.0 ;
                                      sh:maxCount 5 ;
                                      dash:editor memorix:LinkedRecordEditor ;
                                      sh:group    acquisition:contentDescriptionGroup ;
                                      sh:nodeKind sh:IRI ;
                                      sh:or       ( [ sh:class rt:Person ]
                                                    [ sh:class rt:Family ]
                                                    [ sh:class rt:Organisation ] ) ; ] ;
    sh:property                     [ rdfs:label              "Rechtstitel"@nl ;
                                      sh:message              "Kies een rechtstitel uit de keuzelijst. Dit is verplicht."@nl ;
                                      sh:order                3.0 ;
                                      #sh:minCount             1 ; #todo evt. aanzetten als UI gefikst is
                                      sh:maxCount             1 ;
                                      dash:editor             memorix:VocabularyEditor ;
                                      sh:nodeKind             sh:IRI ;
                                      sh:class                skos:Concept ;
                                      memorix:conceptSchemeIn vocabularies:93b6eed4-d045-4d61-bfa5-0fa17aa48c7d ;
                                      sh:group                acquisition:contentDescriptionGroup ;
                                      sh:path                 acquisition:legalTitle ] ;
    sh:property                     [ rdfs:label  "Zorgdrager"@nl ;
                                      sh:datatype xsd:string ;
                                      sh:group    acquisition:contentDescriptionGroup ;
                                      sh:order    4.0 ;
                                      sh:path     acquisition:careTaker ] ;
    sh:property                     [ rdfs:label   "Omvang"@nl ;
                                      rdfs:comment "Omvang van de stukken, zoals ze binnenkwamen"@nl ;
                                      sh:datatype  xsd:string ;
                                      sh:group     acquisition:contentDescriptionGroup ;
                                      sh:order     5.0 ;
                                      sh:path      acquisition:dimension ] ;
    sh:property                     [ rdfs:label   "Stuksoort"@nl ;
                                      rdfs:comment "Soort materiaal, bijvoorbeeld filmdatakaarten"@nl ;
                                      sh:datatype  xsd:string ;
                                      sh:group     acquisition:contentDescriptionGroup ;
                                      sh:order     6.0 ;
                                      sh:path      acquisition:typeOfMaterial ] ;
    sh:property                     [ rdfs:label   "Omschrijving"@nl ;
                                      rdfs:comment "Omschrijving van het binnengekomen materiaal"@nl ;
                                      dash:editor  dash:TextAreaEditor ;
                                      sh:datatype  xsd:string ;
                                      sh:group     acquisition:contentDescriptionGroup ;
                                      sh:order     7.0 ;
                                      sh:path      acquisition:descriptionOfMaterial ; ] ;
    sh:property                     [ rdfs:label  "Overheid?"@nl ;
                                      sh:datatype xsd:boolean ;
                                      sh:group    acquisition:contentDescriptionGroup ;
                                      sh:maxCount 1 ;
                                      sh:order    8.0 ;
                                      sh:path     acquisition:isGovernmentArchive ] ;
    sh:property                     [ rdfs:label  "Referentie (AVO) dossier"@nl ;
                                      sh:datatype xsd:string ;
                                      sh:group    acquisition:managementGroup ;
                                      sh:order    1.0 ;
                                      sh:path     acquisition:dossier ; ] ;
    sh:property                     [ rdfs:label  "Ge√Ønventariseerd?"@nl ;
                                      sh:datatype xsd:boolean ;
                                      sh:group    acquisition:managementGroup ;
                                      sh:maxCount 1 ;
                                      sh:order    2.0 ;
                                      sh:path     acquisition:isInventoried ] ;
    sh:property                     [ rdfs:label  "Interne opmerking"@nl ;
                                      dash:editor dash:TextAreaEditor ;
                                      sh:datatype xsd:string ;
                                      sh:group    acquisition:managementGroup ;
                                      sh:order    3.0 ;
                                      sh:path     acquisition:internalRemarks ; ] ;
    sh:property                     [ rdfs:label   "Gekoppeld archiefblok of bestanddeel"@nl ;
                                      rdfs:comment "Archiefblok of bestanddeel waaraan deze aanwinst gekoppeld is."@nl ;
                                      sh:message   "Kies een archiefblok of bestanddeel waar deze aanwinst bij hoort."@nl ;
                                      dash:editor  memorix:LinkedRecordEditor ;
                                      sh:group     acquisition:partitionGroup ;
                                      #sh:minCount 1 ; #todo evt. aanzetten als UI gefikst is. Verplicht maken?
                                      sh:maxCount  100 ;
                                      sh:nodeKind  sh:IRI ;
                                      sh:or        ( [ sh:class rt:Fonds ] [ sh:class rt:File ] ) ;
                                      sh:order     1.0 ;
                                      sh:path      acquisition:isDescribedIn ] ;
.
