@prefix rdf:             <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:            <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:             <http://www.w3.org/2001/XMLSchema#> .
@prefix skos:            <http://www.w3.org/2004/02/skos/core#> .

@prefix rt:              </resources/recordtypes/> .
@prefix deed:            </resources/recordtypes/Deed#> .
@prefix saa:             </resources/recordtypes/Saa#> .

@prefix dc:              <http://purl.org/dc/elements/1.1/> .
@prefix sh:              <http://www.w3.org/ns/shacl#> .
@prefix dash:            <http://datashapes.org/dash#> .
@prefix memorix:         <http://memorix.io/ontology#> .
@prefix html:            <http://www.w3.org/1999/xhtml/> .
@prefix vocabularies:    </resources/vocabularies/conceptschemes/> .

@prefix rico:            <https://www.ica.org/standards/RiC/ontology#> .
@prefix ric-rst:         <https://www.ica.org/standards/RiC/vocabularies/recordSetTypes#> .
@prefix ric-dft:         <https://www.ica.org/standards/RiC/vocabularies/documentaryFormTypes#> .


deed:identificationGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Akte"@nl,
               "Deed"@en ;
    sh:order   1.0 .

deed:contentDescriptionGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Beschrijving"@nl,
               "Description"@en ;
    sh:order   2.0 .

deed:managementGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Beheer"@nl,
               "Manage"@en ;
    sh:order   3.0 .

rt:Deed
    a                    memorix:Recordtype,
                         sh:NodeShape;
    rdfs:comment         "Stadsarchief recordtype voor Akte"@nl ;
    rdfs:label           "Akte"@nl,
                         "Deed"@en ;
    dc:identifier        "Deed" ;
    sh:targetClass       saa:Deed ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;

    # identificationGroup
    sh:property          deed:TitleShape, deed:DocumentaryFormShape, deed:AssociatedWithDateShape, deed:IndexNameShape, deed:IsOrWasIncludedInShape ;
    # contentDescriptionGroup
    sh:property          deed:SourceShape, deed:HasOrHadSubjectShape, deed:HasOrHadLocationShape ;
    # managementGroup
    sh:property          deed:InternalRemarksShape ;
.

deed:TitleShape
    a                 sh:PropertyShape ;
    rdfs:label        "Titel"@nl,
                      "Title"@en ;
    rdfs:comment      "Gemigreerde titel, t.b.v. de Memorix interface"@nl ;
    memorix:inTitleAt 1.0 ;
    sh:datatype       xsd:string ;
    sh:group          deed:identificationGroup ;
    sh:maxCount       1 ;
    sh:order          1.0 ;
    sh:path           rico:title
.

deed:DocumentaryFormShape
    a           sh:PropertyShape ;
    rdfs:label  "Aktetype"@nl,
                "Type of record"@en ;
    sh:datatype xsd:string ;
    sh:group    deed:identificationGroup ;
    sh:maxCount 1 ;
    sh:order    2.0 ;
    sh:path     rico:hasDocumentaryFormType
.

deed:AssociatedWithDateShape
    a           sh:PropertyShape ;
    rdfs:label  "Datum (van de akte)"@nl,
                "Date of the record"@en ;
    sh:group    deed:identificationGroup ;
    sh:order    3.0 ;
    sh:class    rico:SingleDate ;
    sh:maxCount 1 ;
    sh:nodeKind sh:BlankNode ;
    sh:path     rico:isAssociatedWithDate
.

deed:IndexNameShape
    a                   sh:PropertyShape ;
    rdfs:label          "Index Naam"@nl,
                        "Name of the index"@en ;
    rdfs:comment        "Huidige naam van de index."@nl,
                        "Current name of the index"@en ;
    memorix:inSummaryAt 1.0 ;
    sh:datatype         xsd:string ;
    sh:group            deed:identificationGroup ;
    sh:order            4.0 ;
    sh:path             saa:indexName
.

deed:IsOrWasIncludedInShape
    a            sh:PropertyShape ;
    rdfs:label   "Gekoppeld bestanddeel"@nl ;
    rdfs:comment "Bestanddeel waartoe deze akkoord behoort."@nl ;
    sh:message   "Kies een bestanddeel om aan te koppelen. Dit is verplicht."@nl ;
    dash:editor  memorix:LinkedRecordEditor ;
    sh:group     deed:identificationGroup ;
    # sh:minCount  1 ; # todo aanzetten als de UI gefikst is
    sh:maxCount  1 ;
    sh:nodeKind  sh:IRI ;
    sh:or        ( [ sh:class rt:File ] ) ;
    sh:order     6.0 ;
    sh:path      rico:isOrWasIncludedIn
.

deed:SourceShape
    a           sh:PropertyShape ;
    rdfs:label  "Bronverwijzing"@nl,
                "Mention of the source"@en ;
    sh:datatype xsd:string ;
    sh:group    deed:contentDescriptionGroup ;
    sh:order    1.0 ;
    sh:path     saa:source
.

deed:HasOrHadSubjectShape
    a            sh:PropertyShape ;
    rdfs:label   "Personen"@nl,
                 "People"@en ;
    rdfs:comment "Personen die voorkomen op de akte."@nl,
                 "people mentioned in the source"@en ;
    sh:class     deed:Person ;
    sh:group     deed:contentDescriptionGroup ;
    sh:maxCount  999 ;
    sh:nodeKind  sh:BlankNode ;
    sh:order     2.0 ;
    sh:path      rico:hasOrHadSubject
.

# Of rico:hasOrHadPhysicalLocation, rico:hasOrHadPlaceName ?
deed:HasOrHadLocationShape
    a            sh:PropertyShape ;
    rdfs:label   "Adressen"@nl,
                 "Addresses"@en ;
    rdfs:comment "Adres dat voorkomt op de akte."@nl,
                 "Address mentioned in the source"@en ;
    sh:class     deed:Address ;
    sh:group     deed:contentDescriptionGroup ;
    sh:maxCount  999 ;
    sh:nodeKind  sh:BlankNode ;
    sh:order     3.0 ;
    sh:path      rico:isAssociatedWithPlace
.

deed:InternalRemarksShape
    a           sh:PropertyShape ;
    rdfs:label  "Interne opmerking"@nl,
                "Internal remark"@en ;
    dash:editor dash:TextAreaEditor ;
    sh:datatype xsd:string ;
    sh:group    deed:managementGroup ;
    sh:order    8.0 ;
    sh:maxCount 1 ;
    sh:path     deed:internalRemarks
.

## shapes
deed:Person
    rdf:type             sh:NodeShape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label  "Persoonsvermelding"@nl,
                                       "Person observation"@en ;
                           dash:editor memorix:LinkedRecordEditor ;
                           sh:nodeKind sh:IRI ;
                           sh:or       ( rt:PersonObservation ) ;
                           sh:order    2.0 ;
                           sh:path     deed:personObservation
                         ] ;
    sh:property          [ rdfs:label  "Rol"@nl,
                                       "Role"@en ;
                           sh:datatype xsd:string ;
                           sh:order    1.0 ;
                           sh:path     deed:personRole
                         ] ;
    sh:targetClass       saa:PersonLink
.

deed:Address
    a                    sh:NodeShape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:targetClass       saa:Address ;
    sh:group             deed:contentDescriptionGroup ;
    sh:property          deed:HistoricalAddress1851Shape, deed:HistoricalAddress1853Shape, deed:ModernAddressShape, deed:AddressHouseNameShape, deed:AddressPlaceShape, deed:AddressRemarksShape ;
.

deed:HistoricalAddress1851Shape
    a            sh:PropertyShape ;
    rdfs:label   "Adres uit 1851-1853"@nl,
                 "Address in 1851-1853"@en ;
    sh:class     deed:HistoricalAddress1851NodeShape ;
    sh:group     deed:contentDescriptionGroup ;
    sh:maxCount  999 ;
    sh:nodeKind  sh:BlankNode ;
    sh:order     3.0 ;
    sh:path      saa:historicalAddress1851 ;
.

deed:HistoricalAddress1851NodeShape
    a                    sh:NodeShape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label  "Straatnaam (1851-53)"@nl,
                                       "Street name (1851-53)"@en ;
                           sh:datatype xsd:string ;
                           sh:order    1.0 ;
                           sh:path     deed:historicalAddress1851Street
                         ] ;
    sh:property          [ rdfs:label  "Kleinnummer"@nl,
                                       "Klein number"@en ;
                           sh:datatype xsd:string ;
                           sh:order    2.0 ;
                           sh:path     deed:historicalAddressKleinNumber
                         ] ;
    sh:targetClass       saa:HistoricalAddress1851 ;
.

deed:HistoricalAddress1853Shape
    a            sh:PropertyShape ;
    rdfs:label   "Adres uit 1853-1874"@nl,
                 "Address in 1853-1874"@en ;
    sh:class     deed:HistoricalAddress1853NodeShape ;
    sh:group     deed:contentDescriptionGroup ;
    sh:maxCount  999 ;
    sh:nodeKind  sh:BlankNode ;
    sh:order     3.0 ;
    sh:path      saa:historicalAddress1853 ;
.

deed:HistoricalAddress1853NodeShape
    a                    sh:NodeShape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label  "Straatnaam (1853-74)"@nl,
                                       "Street name (1853-74)"@en ;
                           sh:datatype xsd:string ;
                           sh:order    3.0 ;
                           sh:path     saa:historicalAddress1853Street
                         ] ;
    sh:property          [ rdfs:label  "Buurtcode"@nl,
                                       "Neighourhood code"@en ;
                           sh:datatype xsd:string ;
                           sh:order    4.0 ;
                           sh:path     saa:historicalAddressNeighourhoodCode
                         ] ;
    sh:property          [ rdfs:label  "Buurtnummer"@nl,
                                       "Neighourhood number"@en ;
                           sh:datatype xsd:string ;
                           sh:order    5.0 ;
                           sh:path     saa:historicalAddressNeighourhoodNumber
                         ] ;
    sh:targetClass       saa:HistoricalAddress1853 ;
.

deed:ModernAddressShape
    a           sh:PropertyShape ;
    rdfs:label  "Modern adres"@nl,
                "Modern Address"@en ;
    sh:group     deed:contentDescriptionGroup ;
    sh:class     deed:ModernAddressNodeShape ;
    sh:nodeKind  sh:BlankNode ;
    sh:datatype  xsd:string ;
    sh:order     4.0 ;
    sh:maxCount  1 ;
    sh:path      saa:modernAddress
.

deed:ModernAddressNodeShape
    a                    sh:NodeShape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label              "Straatnaam"@nl ;
                           sh:path                 deed:street ;
                           sh:order                6.0 ;
                           sh:maxCount             1 ;
                           dash:editor             memorix:VocabularyEditor ;
                           memorix:conceptSchemeIn vocabularies:a4863c0c-d9e5-3902-831a-d0960e381a41 ;
                           sh:class                skos:Concept ;
                           sh:nodeKind             sh:IRI ;
                         ] ;
    sh:property          [ rdfs:label  "Huisnummer van"@nl ;
                           sh:path     deed:houseNumberBegin ;
                           sh:order    7.0 ;
                           sh:maxCount 1 ;
                           sh:datatype xsd:string ;
                         ] ;
    sh:property          [ rdfs:label  "Huisnummer tot"@nl ;
                           sh:path     deed:houseNumberEnd ;
                           sh:order    8.0 ;
                           sh:maxCount 1 ;
                           sh:datatype xsd:string ;
                         ];
    sh:targetClass       saa:ModernAddress
.


deed:AddressHouseNameShape
    a           sh:PropertyShape ;
    rdfs:label  "Huisnaam"@nl,
                "House name"@en ;
    sh:datatype xsd:string ;
    sh:order    4.0 ;
    sh:maxCount 1 ;
    sh:path     saa:houseName
.

deed:AddressPlaceShape
    a           sh:PropertyShape ;
    rdfs:label  "Plaats (anders dan Amsterdam)"@nl,
                "Place (other than Amsterdam)"@en ;
    sh:datatype xsd:string ;
    sh:order    5.0 ;
    sh:maxCount 1 ;
    sh:path     saa:placeName
.

deed:AddressRemarksShape
    a           sh:PropertyShape ;
    rdfs:label  "Opmerking bij adres"@nl,
                "Internal remarks"@en ;
    dash:editor dash:TextAreaEditor ;
    sh:datatype xsd:string ;
    sh:order    6.0 ;
    sh:maxCount 1 ;
    sh:path     saa:addressRemarks
.

rico:SingleDate
    a                    sh:NodeShape ;
    sh:targetClass       rico:SingleDate ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label  "Datum"@nl ;
                           sh:datatype xsd:date ;
                           sh:order    2.0 ;
                           sh:path     rico:normalizedDateValue
                         ] ;
.

