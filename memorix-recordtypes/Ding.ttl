@prefix rdf:            <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:           <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:            <http://www.w3.org/2002/07/owl#> .
@prefix xsd:            <http://www.w3.org/2001/XMLSchema#> .
@prefix skos:           <http://www.w3.org/2004/02/skos/core#> .

@prefix rt:             </resources/recordtypes/> .
@prefix ding:           </resources/recordtypes/SaaDing#> .

@prefix dc:             <http://purl.org/dc/elements/1.1/> .
@prefix sh:             <http://www.w3.org/ns/shacl#> .
@prefix dash:           <http://datashapes.org/dash#> .
@prefix memorix:        <http://memorix.io/ontology#> .
@prefix html:           <http://www.w3.org/1999/xhtml/> .

@prefix rico:           <https://www.ica.org/standards/RiC/ontology#> .
@prefix ric-rst:        <https://www.ica.org/standards/RiC/vocabularies/recordSetTypes#> .
@prefix ric-dft:        <https://www.ica.org/standards/RiC/vocabularies/documentaryFormTypes#> .

@prefix pnv:            <https://w3id.org/pnv#> .
@prefix schema:         <http://schema.org/> .


ding:testGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Test dingen"@nl ;
    sh:order   1.0 .


rt:Ding
    rdf:type             memorix:Recordtype ,
                         sh:NodeShape ,
                         rdfs:Class ;
    rdfs:comment         "Stadsarchief recordtype voor test dingen"@nl ;
    rdfs:label           "Ding"@nl ;
    dc:identifier        "SaaDing" ;
    sh:targetClass       rt:Ding ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label        "Titel"@nl ;
                           memorix:inTitleAt 1.0 ;
                           sh:datatype       xsd:string ;
                           sh:group          ding:testGroup ;
                           sh:maxCount       1 ;
                           sh:order          1.0 ;
                           sh:path           ding:tekst ] ;
    sh:property          [ rdfs:label  "Vervaardiger(s)"@nl ;
                           sh:path     ding:creator ;
                           sh:order    2.0 ;
                           sh:maxCount 3 ;
                           sh:group    ding:testGroup ;
                           dash:editor memorix:LinkedRecordEditor ;
                           sh:nodeKind sh:IRI ;
                           sh:or       ( [ sh:class rt:Persoon ]
                                         [ sh:class rt:Organisatie ]
                                         [ sh:class rt:SaaPersoon ] ) ; ] ;
    sh:property          [ rdfs:label  "Statuslijstje vaste waardes"@nl ;
                           sh:message  "Status is verplicht. Moet een van de volgende waardes zijn: Aanwezig, Vervallen, Te vernietigen, Vermist, Vernietigd"@nl ;
                           sh:datatype xsd:string ;
                           sh:group    ding:testGroup ;
                           sh:in       ( "Aanwezig" "Vervallen" "Te vernietigen" "Vermist" "Vernietigd" ) ;
                           sh:maxCount 1 ;
                           sh:order    3.0 ;
                           sh:path     ding:status ] ;
.

ding:status a rdf:Property ;
    rdfs:subPropertyOf rico:isOrWasRecordStateOfAllMembers .