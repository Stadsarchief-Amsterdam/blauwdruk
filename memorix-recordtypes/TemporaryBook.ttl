@prefix dash:          <http://datashapes.org/dash#> .
@prefix dc:            <http://purl.org/dc/elements/1.1/> .
@prefix html:          <http://www.w3.org/1999/xhtml/> .
@prefix libraryfonds:  </resources/recordtypes/LibraryFonds#> .
@prefix memorix:       <http://memorix.io/ontology#> .
@prefix owl:           <http://www.w3.org/2002/07/owl#> .
@prefix rdf:           <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:          <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ric-dft:       <https://www.ica.org/standards/RiC/vocabularies/documentaryFormTypes#> .
@prefix ric-rst:       <https://www.ica.org/standards/RiC/vocabularies/recordSetTypes#> .
@prefix rico:          <https://www.ica.org/standards/RiC/ontology#> .
@prefix rt:            </resources/recordtypes/> .
@prefix saa:           <https://data.archief.amsterdam/ontology#> .
@prefix schema:        <http://schema.org/> .
@prefix sh:            <http://www.w3.org/ns/shacl#> .
@prefix skos:          <http://www.w3.org/2004/02/skos/core#> .
@prefix temporaryBook: </resources/recordtypes/TemporaryBook#> .
@prefix vocabularies:  </resources/vocabularies/conceptschemes/> .
@prefix xsd:           <http://www.w3.org/2001/XMLSchema#> .

temporaryBook:identificationGroup
        rdf:type    sh:PropertyGroup;
        rdfs:label  "Identification"@en , "Identificatie"@nl;
        sh:order    1.0 .

temporaryBook:managementGroup
        rdf:type    sh:PropertyGroup;
        rdfs:label  "Beheer"@nl , "Manage"@en;
        sh:order    3.0 .

rt:TemporaryBook  rdf:type    memorix:Recordtype , sh:NodeShape;
        rdfs:comment          "Stadsarchief tijdelijk recordtype voor Boek"@nl , "Amsterdam City Archives record type for TemporaryBook"@en;
        rdfs:label            "TemporaryBook"@en , "Tijdelijk Boek"@nl;
        memorix:hasInformationComponent
                [ rdf:type  memorix:DigitalAssetComponent , memorix:DepotLocationComponent ];
        memorix:typeOf        memorix:File;
        dc:identifier         "TemporaryBook";
        sh:closed             true;
        sh:ignoredProperties  ( rdf:type );
        sh:property           temporaryBook:ISBNShape , temporaryBook:InternalRemarksShape , temporaryBook:editionShape , temporaryBook:sameAsShape , temporaryBook:HasPublicationShape , temporaryBook:IsOrWasIncludedInShape , temporaryBook:TitleShape , temporaryBook:AuthorShape , temporaryBook:InventorynumberShape , temporaryBook:AcquisitionShape , temporaryBook:typeOfPublicationShape , temporaryBook:NotaBeneShape , temporaryBook:SeriesTitleShape , temporaryBook:physicalDescriptionShape;
        sh:targetClass        rt:TemporaryBook .
        
temporaryBook:TitleShape
        rdf:type              sh:PropertyShape;
        rdfs:label            "Title"@en , "Titel"@nl;
        memorix:inTitleAt     2.0;
        memorix:searchWeight  8.0;
        sh:datatype           xsd:string;
        sh:group              temporaryBook:identificationGroup;
        sh:maxCount           1;
        sh:order              3.0;
        sh:path               schema:name .

temporaryBook:typeOfPublicationShape
        rdf:type                 sh:PropertyShape;
        rdfs:label               "Type of publication"@en , "Type publicatie"@nl;
        dash:editor              memorix:VocabularyEditor;
        memorix:conceptSchemeIn  vocabularies:d9859e1d-de72-4604-b794-5e0be9f74664;
        memorix:searchWeight     3.0;
        sh:class                 skos:Concept;
        sh:group                 temporaryBook:descriptionGroup;
        sh:maxCount              1;
        sh:nodeKind              sh:IRI;
        sh:order                 11.0;
        sh:path                  schema:additionalType .

temporaryBook:AuthorShape
        rdf:type      sh:PropertyShape;
        rdfs:comment  "Een of meerdere auteurs."@nl , "One or more authors."@en;
        rdfs:label    "Auteur(s)"@nl , "Author(s)"@en;
        dash:editor   memorix:LinkedRecordEditor;
        sh:group      temporaryBook:descriptionGroup;
        sh:maxCount   100;
        sh:message    "Choose an author."@en , "Kies een auteur."@nl;
        sh:nodeKind   sh:IRI;
        sh:or         ( [ sh:class  rt:Person ]
                        [ sh:class  rt:Organisation ]
                        [ sh:class  rt:Author ]
                        [ sh:class  rt:CooperativeAuthor ]
                      );
        sh:order      10.0;
        sh:path       schema:author .

temporaryBook:InternalRemarksShape
        rdf:type          sh:PropertyShape;
        rdfs:label        "Interne opmerking"@nl , "Internal remark"@en;
        dash:editor       dash:TextAreaEditor;
        memorix:audience  memorix:AudienceInternal;
        sh:datatype       xsd:string;
        sh:group          temporaryBook:managementGroup;
        sh:maxCount       1;
        sh:order          2.0;
        sh:path           temporaryBook:internalRemarks .

temporaryBook:editionShape
        rdf:type     sh:PropertyShape;
        rdfs:label   "Edition"@en , "Editie"@nl;
        sh:datatype  xsd:string;
        sh:group     temporaryBook:descriptionGroup;
        sh:maxCount  1;
        sh:order     10.0;
        sh:path      schema:bookEdition .

temporaryBook:SeriesTitleShape
        rdf:type              sh:PropertyShape;
        rdfs:label            "Title of series"@en , "Serietitel"@nl;
        memorix:searchWeight  5.0;
        sh:datatype           xsd:string;
        sh:description        "If this book is part of a series, also enter the Serie title"@en , "Als de titel onderdeel uitmaakt van een serie, geef ook de serietitel"@nl;
        sh:group              temporaryBook:identificationGroup;
        sh:maxCount           1;
        sh:order              4.0;
        sh:path               temporaryBook:seriesTitle .

temporaryBook:ISBNShape
        rdf:type              sh:PropertyShape;
        rdfs:label            "ISBN"@nl , "ISBN"@en;
        memorix:inSummaryAt   1.0;
        memorix:searchWeight  5.0;
        sh:datatype           xsd:string;
        sh:group              temporaryBook:identificationGroup;
        sh:maxCount           1;
        sh:order              7.0;
        sh:path               schema:isbn .

temporaryBook:descriptionGroup
        rdf:type    sh:PropertyGroup;
        rdfs:label  "Beschrijving"@nl , "Description"@en;
        sh:order    2.0 .

temporaryBook:physicalDescriptionShape
        rdf:type     sh:PropertyShape;
        rdfs:label   "Physical description"@en , "Collatie"@nl;
        sh:datatype  xsd:string;
        sh:group     temporaryBook:descriptionGroup;
        sh:maxCount  1;
        sh:order     12.0;
        sh:path      saa:physicalDescription .

temporaryBook:HasPublicationShape
        rdf:type     sh:PropertyShape;
        rdfs:label   "Publication"@en , "Uitgave"@nl;
        sh:class     schema:PublicationEvent;
        sh:group     temporaryBook:descriptionGroup;
        sh:maxCount  1;
        sh:nodeKind  sh:BlankNode;
        sh:order     2.0;
        sh:path      schema:publication .

temporaryBook:InventorynumberShape
        rdf:type              sh:PropertyShape;
        rdfs:label            "Inventarisnummer"@nl , "Inventory number"@en;
        memorix:inTitleAt     1.0;
        memorix:searchWeight  5.0;
        sh:datatype           xsd:string;
        sh:group              temporaryBook:identificationGroup;
        sh:maxCount           1;
        sh:order              2.0;
        sh:path               rico:Identifier .

temporaryBook:sameAsShape
        rdf:type        sh:PropertyShape;
        rdfs:label      "Identiek aan (worldcat)"@nl , "Is same as (worldcat)"@en;
        dash:editor     memorix:IriEditor;
        sh:description  "Please provide a worldcat URI"@en , "Plak hier eeen worldcat URI in"@nl;
        sh:flags        "i";
        sh:group        temporaryBook:descriptionGroup;
        sh:maxCount     1;
        sh:message      "Value must start with http:// or https:// consist of a valid IRI"@en , "Waarde moet beginnen met http of https"@nl;
        sh:nodeKind     sh:IRI;
        sh:order        15.0;
        sh:path         owl:sameAs;
        sh:pattern      "^https?://" .

schema:PublicationEvent
        rdf:type              sh:NodeShape;
        sh:closed             true;
        sh:ignoredProperties  ( rdf:type );
        sh:property           [ rdfs:label   "Publisher"@en , "Uitgever"@nl;
                                sh:datatype  xsd:string;
                                sh:maxCount  1;
                                sh:order     3.0;
                                sh:path      schema:name
                              ];
        sh:property           [ rdfs:label           "Publication place"@en , "Plaats van uitgave"@nl;
                                memorix:inSummaryAt  2.0;
                                sh:datatype          xsd:string;
                                sh:maxCount          1;
                                sh:order             3.0;
                                sh:path              schema:location
                              ];
        sh:property           [ rdfs:label           "Year of publication"@en , "Jaar van uitgave"@nl;
                                memorix:inSummaryAt  3.0;
                                sh:datatype          xsd:gYear;
                                sh:maxCount          1;
                                sh:order             1.0;
                                sh:path              schema:startDate
                              ];
        sh:targetClass        schema:PublicationEvent .

temporaryBook:IsOrWasIncludedInShape
        rdf:type        sh:PropertyShape;
        rdfs:comment    "Fonds to which this book belongs."@en , "Archief waar dit boek bij hoort."@nl;
        rdfs:label      "Fonds"@en , "Archief"@nl;
        dash:editor     memorix:LinkedRecordEditor;
        memorix:typeOf  memorix:FondsFieldLink;
        sh:group        temporaryBook:identificationGroup;
        sh:maxCount     1;
        sh:message      "Choose a fonds where this book belongs to."@en , "Kies een archief waar dit boek uit komt."@nl;
        sh:nodeKind     sh:IRI;
        sh:or           ( [ sh:class  rt:Fonds ]
                        );
        sh:order        1.0;
        sh:path         rico:isOrWasIncludedIn .

temporaryBook:NotaBeneShape
        rdf:type         sh:PropertyShape;
        rdfs:comment     "A more descriptive note"@en , "Uitgebreidere beschrijving, afkomstig uit NB velden"@nl;
        rdfs:label       "Nota bene"@nl , "Note"@en;
        dash:editor      dash:TextAreaEditor;
        dash:singleLine  false;
        sh:datatype      xsd:string;
        sh:group         temporaryBook:identificationGroup;
        sh:maxCount      1;
        sh:order         6.0;
        sh:path          schema:description .

temporaryBook:AcquisitionShape
        rdf:type          sh:PropertyShape;
        rdfs:label        "Aanwinst"@nl , "Acquisition"@en;
        dash:editor       memorix:LinkedRecordEditor;
        memorix:audience  memorix:AudienceInternal;
        sh:group          temporaryBook:managementGroup;
        sh:maxCount       1;
        sh:nodeKind       sh:IRI;
        sh:or             ( [ sh:class  rt:Acquisition ]
                          );
        sh:order          1.0;
        sh:path           saa:isIncludedInAcquisition .

