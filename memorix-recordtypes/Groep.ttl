@prefix rdf:            <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:           <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:            <http://www.w3.org/2002/07/owl#> .
@prefix xsd:            <http://www.w3.org/2001/XMLSchema#> .
@prefix skos:           <http://www.w3.org/2004/02/skos/core#> .

@prefix rt:             </resources/recordtypes/> .
@prefix groep:           </resources/recordtypes/Groep#> .

@prefix dc:             <http://purl.org/dc/elements/1.1/> .
@prefix sh:             <http://www.w3.org/ns/shacl#> .
@prefix dash:           <http://datashapes.org/dash#> .
@prefix memorix:        <http://memorix.io/ontology#> .
@prefix html:           <http://www.w3.org/1999/xhtml/> .

@prefix rico:           <https://www.ica.org/standards/RiC/ontology#> .
@prefix ric-rst:        <https://www.ica.org/standards/RiC/vocabularies/recordSetTypes#> .
@prefix ric-dft:        <https://www.ica.org/standards/RiC/vocabularies/documentaryFormTypes#> .

@prefix pnv:            <https://w3id.org/pnv#> .
@prefix schema:         <https://schema.org/> .


groep:identificationGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Identificatie"@nl ;
    sh:order   1.0 .

groep:contentDescriptionGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Beschrijving"@nl ;
    sh:order   2.0 .

groep:partitionGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Indeling"@nl ;
    sh:order   3.0 .

groep:managementGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Beheer"@nl ;
    sh:order   4.0 .

rt:Groep
    rdf:type             memorix:Recordtype, sh:NodeShape ;
    rdfs:comment         "Stadsarchief recordtype voor Groep"@nl ;
    rdfs:label           "Groep"@nl ;
    dc:identifier        "SaaGroep" ;
    sh:targetClass       rt:Groep ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label           "Rubriekscode"@nl ;
                           rdfs:comment         "Voor het vastleggen van o.a. de basis archiefcode"@nl ;
                           dash:singleLine      true ;
                           memorix:inTitleAt    1.0 ;
                           memorix:searchWeight 3.0 ;
                           sh:datatype          xsd:string ;
                           sh:group             groep:identificationGroup ;
                           sh:maxCount          1 ;
                           sh:order             1.0 ;
                           sh:path              rico:identifier ] ;
    sh:property          [ rdfs:label           "Beschrijving"@nl ;
                           rdfs:comment         "Korte beschrijving dan wel label of naam van de groep"@nl ;
                           dash:singleLine      true ;
                           memorix:inTitleAt    2.0 ;
                           memorix:searchWeight 3.0 ;
                           sh:datatype          xsd:string ;
                           sh:group             groep:identificationGroup ;
                           sh:maxCount          1 ;
                           sh:order             2.0 ;
                           sh:path              rico:title ] ;
    sh:property          [ rdfs:label           "Nota bene"@nl ;
                           rdfs:comment         "Uitgebreidere beschrijving, afkomstig uit NB velden"@nl ;
                           dash:singleLine      false ;
                           memorix:searchWeight 3.0 ;
                           sh:datatype          xsd:string ;
                           dash:editor          dash:TextAreaEditor ;
                           sh:group             groep:contentDescriptionGroup ;
                           sh:maxCount          1 ;
                           sh:order             3.0 ;
                           sh:path              rico:scopeAndContent ] ;
    sh:property          [ rdfs:label   "Datering"@nl ;
                           rdfs:comment "Kan een exacte datum of een periode zijn"@nl ;
                           dash:editor  memorix:DateEditor ;
                           sh:datatype  xsd:integer ;
                           sh:group     groep:contentDescriptionGroup ;
                           sh:maxCount  1 ;
                           sh:order     1.0 ;
                           sh:path      rico:DateRange ] ;
    sh:property          [ rdfs:label  "Uiterlijke vorm"@nl ;
                           dash:editor dash:TextFieldEditor ;
                           sh:datatype xsd:string ;
                           sh:group    groep:contentDescriptionGroup ;
                           sh:maxCount 1 ;
                           sh:order    2.0 ;
                           sh:path     rico:physicalOrLogicalExtent ] ;
    sh:property          [ rdfs:label   "Bovenliggend archiefblok of groep"@nl ;
                           rdfs:comment "Archiefblok of Groep waartoe dit Bestanddeel behoort."@nl ;
                           sh:message   "Kies uit de lijst."@nl ;
                           dash:editor  memorix:LinkedRecordEditor ;
                           sh:group     groep:partitionGroup ;
                           sh:maxCount  1 ;
                           sh:nodeKind  sh:IRI ;
                           sh:or        ( [ sh:class rt:SaaArchiefblok ] [ sh:class rt:SaaGroep ] ) ;
                           sh:order     3 ;
                           sh:path      rico:isOrWasIncludedIn ] ;
    sh:property          [ rdfs:label  "Interne opmerking"@nl ;
                           dash:editor dash:TextAreaEditor ;
                           sh:datatype xsd:string ;
                           sh:group    groep:managementGroup ;
                           sh:order    4 ;
                           sh:maxCount 1 ;
                           sh:path     groep:remark ; ] ;
.

rico:DateRange
    rdf:type             sh:nodeshape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label  "Beginjaar vorming"@nl ;
                           sh:datatype xsd:date ;
                           dash:editor memorix:DateEditor ;
                           sh:order    1.0 ;
                           sh:path     rico:hasBeginningDate ] ;
    sh:property          [ rdfs:label  "Eindjaar vorming"@nl ;
                           sh:message  "Eindjaar moet liggen tussen 1200 en 2200"@nl ;
                           sh:message  "The year should be between 1200 and 2200"@en ;
                           dash:editor memorix:DateEditor ;
                           sh:datatype xsd:date ;
                           sh:order    2.0 ;
                           sh:path     rico:hasEndDate ] ;
    sh:targetClass       rico:DateRange .
