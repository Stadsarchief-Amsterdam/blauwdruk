@prefix dash:    <http://datashapes.org/dash#> .
@prefix dc:      <http://purl.org/dc/elements/1.1/> .
@prefix html:    <http://www.w3.org/1999/xhtml/> .
@prefix memorix: <http://memorix.io/ontology#> .
@prefix owl:     <http://www.w3.org/2002/07/owl#> .
@prefix pnv:     <https://w3id.org/pnv#> .
@prefix rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:    <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ric-dft: <https://www.ica.org/standards/RiC/vocabularies/documentaryFormTypes#> .
@prefix ric-rst: <https://www.ica.org/standards/RiC/vocabularies/recordSetTypes#> .
@prefix rico:    <https://www.ica.org/standards/RiC/ontology#> .
@prefix rt:      </resources/recordtypes/> .
@prefix schema:  <http://schema.org/> .
@prefix series:  </resources/recordtypes/Series#> .
@prefix saa:     <https://data.archief.amsterdam/ontology#> .
@prefix sh:      <http://www.w3.org/ns/shacl#> .
@prefix skos:    <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd:     <http://www.w3.org/2001/XMLSchema#> .

series:identificationGroup
        rdf:type    sh:PropertyGroup;
        rdfs:label  "Identification"@en , "Identificatie"@nl;
        sh:order    1.0 .

series:contentDescriptionGroup
        rdf:type    sh:PropertyGroup;
        rdfs:label  "Description"@en , "Beschrijving"@nl;
        sh:order    2.0 .

series:managementGroup
        rdf:type    sh:PropertyGroup;
        rdfs:label  "Manage"@en , "Beheer"@nl;
        sh:order    3.0 .

rt:Series  rdf:type           sh:NodeShape , memorix:Recordtype;
        rdfs:comment          "Series: a description of a grouped set of archival items, for example organized by theme, task, or date"@en , "Groep: beschrijving van een gegroepeerde set archiefstukken, bijvoorbeeld op thema, taakuitvoering of datering"@nl;
        rdfs:label            "Series"@en , "Groep"@nl;
        memorix:hasInformationComponent
                [ rdf:type               memorix:TreePathComponent;
                  memorix:hasRecordtype  rt:Series , rt:Fonds
                ];
        memorix:hasInformationComponent
                [ rdf:type  memorix:DepotLocationComponent ];
        dc:identifier         "Series";
        sh:closed             true;
        sh:ignoredProperties  ( rdf:type );
        sh:property           [ rdfs:comment  "Kan een exacte datum of een periode zijn"@nl , "Exact date or date range"@en;
                                rdfs:label    "Dated"@en , "Datering VB"@nl;
                                sh:class      rico:DateRange;
                                sh:group      series:contentDescriptionGroup;
                                sh:maxCount   1;
                                sh:nodeKind   sh:BlankNode;
                                sh:order      1.0;
                                sh:path       rico:isAssociatedWithDate
                              ];
        sh:property           [ rdfs:label           "Archief"@nl , "Fonds"@en;
                                dash:editor          memorix:LinkedRecordEditor;
                                memorix:inSummaryAt  2;
                                memorix:typeOf       memorix:FondsFieldLink;
                                sh:group             series:identificationGroup;
                                sh:maxCount          1;
                                sh:nodeKind          sh:IRI;
                                sh:or                ( [ sh:class  rt:Fonds ]
                                                     );
                                sh:order             1.0;
                                sh:path              saa:isOrWasAlsoIncludedIn
                              ];
        sh:property           [ rdfs:label           "Resource extent"@en , "Uiterlijke vorm VB"@nl;
                                dash:editor          dash:TextFieldEditor;
                                memorix:inSummaryAt  1;
                                html:placeholder     "Bv 2 pakken"@nl , "eg 2 photographs";
                                sh:datatype          xsd:string;
                                sh:group             series:contentDescriptionGroup;
                                sh:maxCount          1;
                                sh:order             3.0;
                                sh:path              rico:physicalOrLogicalExtent
                              ];
        sh:property           [ rdfs:label        "Internal remarks"@en , "Interne opmerking"@nl;
                                dash:editor       dash:TextAreaEditor;
                                memorix:audience  memorix:AudienceInternal;
                                sh:datatype       xsd:string;
                                sh:group          series:managementGroup;
                                sh:maxCount       1;
                                sh:order          4.0;
                                sh:path           series:internalRemarks
                              ];
        sh:property           [ rdfs:label            "Title"@en , "Beschrijving"@nl;
                                dash:editor           dash:TextAreaEditor;
                                memorix:inTitleAt     2.0;
                                memorix:searchWeight  5.0;
                                sh:datatype           xsd:string;
                                sh:group              series:identificationGroup;
                                sh:maxCount           1;
                                sh:message            "Geef een korte beschrijving. Dit is verplicht."@nl , "Please provide a title or short description. This is mandatory."@en;
                                sh:minCount           1;
                                sh:order              2.0;
                                sh:path               rico:title
                              ];
        sh:property           [ rdfs:comment          "Uitgebreidere beschrijving, afkomstig uit NB velden"@nl , "A more descriptive note"@en;
                                rdfs:label            "Nota bene"@nl , "Note"@en;
                                dash:editor           dash:TextAreaEditor;
                                dash:singleLine       false;
                                memorix:searchWeight  3.0;
                                sh:datatype           xsd:string;
                                sh:group              series:identificationGroup;
                                sh:maxCount           1;
                                sh:order              4.0;
                                sh:path               rico:scopeAndContent
                              ];
        sh:property           [ rdfs:comment          "Code used by government archives"@en , "Voor het vastleggen van o.a. de basis archiefcode"@nl;
                                rdfs:label            "Groepscode"@nl , "Archival (government) code"@en;
                                dash:singleLine       true;
                                memorix:inTitleAt     1.0;
                                memorix:searchWeight  3.0;
                                memorix:typeOf        memorix:Identifier;
                                sh:datatype           xsd:string;
                                sh:group              series:identificationGroup;
                                sh:maxCount           1;
                                sh:order              1.0;
                                sh:path               rico:identifier
                              ];
        sh:targetClass        rt:Series .

rico:DateRange  rdf:type      sh:NodeShape;
        sh:closed             true;
        sh:ignoredProperties  ( rdf:type );
        sh:property           [ rdfs:label         "End date"@en , "Einddatum"@nl;
                                memorix:inTitleAt  4;
                                sh:datatype        xsd:date;
                                sh:maxCount        1;
                                sh:order           3.0;
                                sh:path            rico:hasEndDate
                              ];
        sh:property           [ rdfs:label         "Begin date"@en , "Begindatum"@nl;
                                memorix:inTitleAt  3;
                                sh:datatype        xsd:date;
                                sh:maxCount        1;
                                sh:order           2.0;
                                sh:path            rico:hasBeginningDate
                              ];
        sh:property           [ rdfs:label   "Date (text)"@en , "Datum (tekst)"@nl;
                                sh:datatype  xsd:string;
                                sh:maxCount  1;
                                sh:order     1.0;
                                sh:path      rico:expressedDate
                              ];
        sh:targetClass        rico:DateRange .
