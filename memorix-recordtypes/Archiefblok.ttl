@prefix rdf:           <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:          <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:           <http://www.w3.org/2002/07/owl#> .
@prefix xsd:           <http://www.w3.org/2001/XMLSchema#> .

@prefix rt:            </resources/recordtypes/> .
@prefix fonds:         </resources/recordtypes/Fonds#> .
@prefix saa:           <https://data.archief.amsterdam/ontology#> . #TBD

@prefix dc:            <http://purl.org/dc/elements/1.1/> .
@prefix sh:            <http://www.w3.org/ns/shacl#> .
@prefix dash:          <http://datashapes.org/dash#> .
@prefix memorix:       <http://memorix.io/ontology#> .
@prefix html:          <http://www.w3.org/1999/xhtml/> .

@prefix rico:          <https://www.ica.org/standards/RiC/ontology#> .
@prefix ric-rst:       <https://www.ica.org/standards/RiC/vocabularies/recordSetTypes#> .
@prefix ric-dft:       <https://www.ica.org/standards/RiC/vocabularies/documentaryFormTypes#> .

fonds:identificationGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Identificatie"@nl , "Identification"@en ;
    sh:order   1.0 .

fonds:accumulationGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Archiefvorming"@nl , "Accumulation"@en ;
    sh:order   2.0 .

fonds:contentDescriptionGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Inhoudelijke beschrijving"@nl, "Content Description"@en ;
    sh:order   3.0 .

fonds:managementGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Beheer"@nl , "Manage"@en;
    sh:order   4.0 .

rt:Fonds
    rdf:type             sh:NodeShape,
                         memorix:Recordtype ;
    #rdfs:label           "Archiefblok"@nl, "Fonds"@en ; #change after randomness is fixed
    rdfs:label           "Archiefblok"@nl ;
    rdfs:comment         "Stadsarchief recordtype voor Archiefblok"@nl ;
    dc:identifier        "Fonds" ;
    sh:targetClass       saa:Fonds ;
    # sh:hasValue ric-rst:Fonds ; implement maybe later when the Memorix interface allows it
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label        "Nummer toegang"@nl , "Fonds Number"@en ;
                           rdfs:comment      "Unieke nummer van deze toegang"@nl , "Unique number to identify the fonds"@en;
                           sh:minCount       1 ;
                           sh:maxCount       1 ;
                           html:placeholder  "Bv 10003.A …"@nl ;
                           sh:group          fonds:identificationGroup ;
                           memorix:inTitleAt 1 ;
                           sh:order          1.0 ;
                           sh:path           rico:identifier ;
                           sh:datatype       xsd:string ] ;
    sh:property          [ rdfs:label        "Naam toegang"@nl , "Name of the fonds"@en ;
                           rdfs:comment      "Naam of beschrijving van de toegang. Moet altijd beginnen met Archief of Collectie."@nl , "Title or decription of the fonds. Must start with 'Archief' or 'Collectie' (Dutch)"@en;
                           sh:datatype       xsd:string ;
                           sh:minCount       1 ;
                           sh:maxCount       1 ;
                           dash:editor       dash:TextFieldEditor ;
                           html:placeholder  "Archief of Collectie van …"@nl ;
                           sh:message        "Naam toegang is verplicht."@nl , "The title of a fonds is mandatory"@en;
                           sh:group          fonds:identificationGroup ;
                           sh:order          2.0 ;
                           memorix:inTitleAt 2 ;
                           sh:path           rico:title ] ;
    sh:property          [ rdfs:label          "Periode vorming"@nl , "Dates of accumulation"@en ;
                           rdfs:comment        "Jaartal of periode van vorming."@nl , "Year or range of years of accumulation"@en ;
                           sh:message          "Geef een of twee jaartallen"@nl , "Enter one or two years"@en ;
                           sh:class            fonds:DateRangeAccumulation ;
                           memorix:inSummaryAt 1 ;
                           sh:group            fonds:accumulationGroup ;
                           sh:maxCount         1 ;
                           sh:nodeKind         sh:BlankNode ;
                           sh:order            3.0 ;
                           sh:path             rico:isAssociatedWithDate ] ;
    sh:property          [ rdfs:label          "Archiefvormer"@nl , "Accumulator"@en ;
                           rdfs:comment        "Gekoppelde archiefvormer uit de Personen en Organisatie thesaurus."@nl , "Related accumulator from list of Persons and Organisations"@en ;
                           sh:message          "Kies een archiefvormer uit de lijst."@nl ;
                           sh:path             rico:hasAccumulator ;
                           dash:editor         memorix:LinkedRecordEditor ;
                           memorix:inSummaryAt 2 ;
                           sh:group            fonds:accumulationGroup ;
                           #sh:minCount 1 ; #todo aanzetten zodra de UI gefikst is
                           sh:maxCount         10 ;
                           sh:order            4.0 ;
                           sh:nodeKind         sh:IRI ;
                           sh:or               ( [ sh:class rt:Person ]
                                                 [ sh:class rt:Organisation ]
                                                 [ sh:class rt:Family ] ) ; ] ;
    sh:property          [ rdfs:label   "Datering Oudste Stuk"@nl , "Date oldest record"@en;
                           rdfs:comment "Datum van het oudste stuk in dit archief."@nl , "Date of the oldest record in the fonds"@en ;
                           sh:class     fonds:DateRangeOldest ;
                           sh:group     fonds:contentDescriptionGroup ;
                           sh:maxCount  1 ;
                           sh:nodeKind  sh:BlankNode ;
                           sh:order     5.0 ;
                           sh:path      fonds:hasOldestRecord ] ;
    sh:property          [ rdfs:label   "Datering Jongste Stuk"@nl , "Date youngest record"@en;
                           rdfs:comment "Datum van het jongste stuk in dit archief."@nl , "Date of the youngest record in the fonds"@en  ;
                           sh:class     fonds:DateRangeYoungest ;
                           sh:group     fonds:contentDescriptionGroup ;
                           sh:maxCount  1 ;
                           sh:nodeKind  sh:BlankNode ;
                           sh:order     6.0 ;
                           sh:path      fonds:hasYoungestRecord ] ;
    sh:property          [ rdfs:label  "Inleiding"@nl , "Introduction"@en;
                           sh:path     rico:scopeAndContent ;
                           sh:group    fonds:contentDescriptionGroup ;
                           sh:maxCount 1 ;
                           sh:order    7.0 ;
                           sh:datatype xsd:string ;
                           dash:editor dash:TextAreaEditor ; ] ;
    sh:property          [ rdfs:label  "Inventarisatie"@nl , "About the description"@en;
                           sh:class    fonds:FindingAid ;
                           sh:group    fonds:contentDescriptionGroup ;
                           sh:maxCount 10 ;
                           sh:nodeKind sh:BlankNode ;
                           sh:order    8.0 ;
                           sh:path     rico:isOrWasDescribedBy ] ;
    sh:property          [ rdfs:label   "Interne opmerkingen"@nl, "Internal remarks"@en ;
                           rdfs:comment "Veld voor allerlei interne opmerkingen. Wordt niet gepubliceerd."@nl , "Divers remarks intended for internal administration"@en;
                           dash:editor  dash:TextAreaEditor ;
                           sh:maxCount  1 ;
                           sh:datatype  xsd:string ;
                           sh:group     fonds:managementGroup ;
                           sh:order     9.0 ;
                           sh:path      saa:internalRemarks ; ] ; # not to be published !
    sh:property          [ rdfs:label   "Status"@nl , "Status"@en;
                           rdfs:comment "Status van het archief."@nl , "Status of the fonds"@en ;
                           sh:message   "Status is verplicht. Moet een van de volgende waardes zijn: aanwezig, vervallen, te vernietigen, vernietigd"@nl , "Must be one of the following (Dutch) terms: aanwezig, vervallen, te vernietigen, vernietigd. Mandatory."@en ;
                           sh:datatype  xsd:string ;
                           sh:minCount  1 ;
                           sh:maxCount  1 ;
                           sh:in       ( "aanwezig" "vervallen" "te vernietigen" "vernietigd" ) ;
                           sh:group     fonds:managementGroup ;
                           sh:order     10.0 ;
                           sh:path      fonds:status ; ] ;
.

fonds:DateRangeAccumulation
    rdf:type             sh:NodeShape , rdfs:Class ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label      "Beginjaar vorming"@nl , "Start Year"@en ;
                           sh:message      "Het jaar moet liggen tussen 1200 en 2200"@nl , "The year must be between 1200 and 2200"@en ;
                           sh:datatype     xsd:gYear ;
                           sh:order        1.0 ;
                           sh:minInclusive "1200"^^xsd:gYear ;
                           sh:maxInclusive "2200"^^xsd:gYear ;
                           sh:path         rico:hasBeginningDate ] ;
    sh:property          [ rdfs:label      "Eindjaar vorming"@nl , "End Year"@en ;
                           sh:message      "Het jaar moet liggen tussen 1200 en 2200"@nl , "The year must be between 1200 and 2200"@en ;
                           sh:datatype     xsd:gYear ;
                           sh:order        2.0 ;
                           sh:minInclusive "1200"^^xsd:gYear ;
                           sh:maxInclusive "2200"^^xsd:gYear ;
                           sh:path         rico:hasEndDate ] ;
    sh:targetClass       saa:DateRangeAccumulation ;
.

fonds:FindingAid
    rdf:type             sh:NodeShape ;
    sh:targetClass       saa:FindingAid ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label  "Inventarisatie door"@nl , "Creator"@en;
                           sh:datatype xsd:string ;
                           sh:order    1.0 ;
                           sh:path     rico:hasAuthor ] ;
    sh:property          [ rdfs:label      "Inventarisatie jaar"@nl , "Year of creation" ;
                           sh:message      "Het jaar moet liggen tussen 1200 en 2200"@nl , "The year must be between 1200 and 2200"@en ;
                           sh:datatype     xsd:gYear ;
                           sh:order        1.0 ;
                           sh:minInclusive "1800"^^xsd:gYear ;
                           sh:maxInclusive "2200"^^xsd:gYear ;
                           sh:path         rico:publicationDate ] ;
.

fonds:DateRangeOldest
    rdf:type             sh:NodeShape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label  "Datum (tekst)"@nl, "Date (text)"@en ;
                           sh:datatype xsd:string ;
                           sh:order    1.0 ;
                           sh:path     rico:expressedDate ] ;
    sh:property          [ rdfs:label  "Begindatum"@nl, "Beginning Date"@en ;
                           sh:datatype xsd:date ;
                           sh:order    2.0 ;
                           sh:path     rico:hasBeginningDate ] ;
    sh:property          [ rdfs:label  "Einddatum"@nl, "End Date"@en ;
                           sh:datatype xsd:date ;
                           sh:order    3.0 ;
                           sh:path     rico:hasEndDate ] ;
    sh:targetClass       saa:DateRangeOldest ;
.

fonds:DateRangeYoungest
    rdf:type             sh:NodeShape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label  "Datum (tekst)"@nl, "Date (text)"@en ;
                           sh:datatype xsd:string ;
                           sh:order    1.0 ;
                           sh:path     rico:expressedDate ] ;
    sh:property          [ rdfs:label  "Begindatum"@nl, "Beginning Date"@en ;
                           sh:datatype xsd:date ;
                           sh:order    2.0 ;
                           sh:path     rico:hasBeginningDate ] ;
    sh:property          [ rdfs:label  "Einddatum"@nl, "End Date"@en ;
                           sh:datatype xsd:date ;
                           sh:order    3.0 ;
                           sh:path     rico:hasEndDate ] ;
    sh:targetClass       saa:DateRangeYoungest ;
.
