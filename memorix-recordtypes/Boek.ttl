@prefix ric-dft:        <https://www.ica.org/standards/RiC/vocabularies/documentaryFormTypes#> .


book:contentDescriptionGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Beschrijving"@nl,
               "Description"@en ;
    sh:order   1.0 .

book:managementGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Beheer"@nl,
               "Manage"@en ;
    sh:order   2.0 .

## moet linken naar depot
## datum is met circa vinkje net zo ingewikkeld als bij bestanddeel
## auteur?
rt:Book
    a                    memorix:Recordtype,
                         sh:NodeShape ;
    rdfs:comment         "Stadsarchief recordtype voor Boek"@nl ;
    rdfs:label           "Boek"@nl,
                         "Book"@en ;
    dc:identifier        "Book" ;
    sh:targetClass       rt:Book ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;

    # contentDescriptionGroup
    sh:property          book:hasOrHadIdentifierShape,
                         book:TitleShape ;
#                         book:NotaBeneShape,
#                         book:PublisherPlaceShape,
#                         book:PublisherShape,
#                         book:PublishedDateShape ;
    #sh:property          book:hasOrHadIdentifierShape, book:TitleShape, book:NotaBeneShape, book:PublisherPlaceShape, book:PublisherShape, book:PublishedDateShape ;
    #sh:property          book:EditionShape, book:CollationShape, book:AuthorsShape, book:redactioneleVormShape, book:isbnShape ;

    # managementGroup
    sh:property          book:InternalRemarksShape,
                         book:StatusShape ;
.

book:hasOrHadIdentifierShape
    a            sh:PropertyShape ;
    rdfs:label   "Inventarisnummer"@nl,
                 "Inventory number"@en ;
    rdfs:comment "Uniek nummer"@nl ;
    #sh:message   "Vul tenminste een (uniek) inventarisnummer in. Dit nummer is verplicht."@nl , "Please provide at least an inventory number. It is required."@en;
    sh:class     book:RicoIdentifierShape ;
    #sh:class     rico:Identifier ;
    sh:group     book:contentDescriptionGroup ;
    #sh:minCount  1 ;
    sh:maxCount  1 ;
    sh:nodeKind  sh:BlankNode ;
    sh:order     1.0 ;
    sh:path      rico:hasOrHadIdentifier
.

book:RicoIdentifierShape
    rdf:type             sh:NodeShape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ rdfs:label           "Nummer"@nl ;
                           dash:singleLine      true ;
                           memorix:inTitleAt    1.0 ;
                           memorix:searchWeight 3.0 ;
                           sh:datatype          xsd:string ;
                           sh:minCount          1 ;
                           sh:maxCount          1 ;
                           sh:order             1.0 ;
                           sh:path              book:inventoryNumber
                         ] ;
    sh:targetClass       rico:Identifier
.


book:TitleShape
    a                    sh:PropertyShape ;
    rdfs:label           "Titel"@nl,
                         "Title"@en ;
    sh:datatype          xsd:string ;
    memorix:inTitleAt    2.0 ;
    memorix:searchWeight 5.0 ;
    sh:order             2.0 ;
    sh:path              schema:name ;
    sh:group             book:contentDescriptionGroup ;
.
