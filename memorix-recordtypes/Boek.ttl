# management
book:InternalRemarksShape
    a           sh:PropertyShape ;
    rdfs:label  "Interne opmerking"@nl,
                "Internal remark"@en ;
    dash:editor dash:TextAreaEditor ;
    sh:datatype xsd:string ;
    sh:group    book:managementGroup ;
    sh:order    1.0 ;
    sh:maxCount 1 ;
    sh:path     book:internalRemarks
.

book:StatusShape
    a            sh:PropertyShape ;
    rdfs:label   "Status"@en,
                 "Status"@nl ;
    rdfs:comment "Status van het inventarisnummer/boek. aanwezig, vervallen, te vernietigen, vermist, vernietigd."@nl ;
    sh:message   "Status is verplicht. Moet een van de volgende waardes zijn: aanwezig, vervallen, vermist, vernietigd"@nl,
                 "Must be one of the following (Dutch) terms: aanwezig, vervallen, vermist, vernietigd. Mandatory."@en ;
    sh:datatype  xsd:string ;
    sh:minCount  1 ;
    sh:maxCount  1 ;
    sh:in        ( "aanwezig" "vervallen" "vermist" "vernietigd" ) ;
    sh:group     book:managementGroup ;
    sh:order     2.0 ;
    sh:path      book:status ;
.


book:inventoryNumber
    a                  rdfs:Property ;
    rdfs:subPropertyOf rico:textualValue ;
.