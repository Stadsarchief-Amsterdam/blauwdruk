@prefix rdf:            <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:           <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:            <http://www.w3.org/2002/07/owl#> .
@prefix xsd:            <http://www.w3.org/2001/XMLSchema#> .
@prefix skos:           <http://www.w3.org/2004/02/skos/core#> .

@prefix rt:             </resources/recordtypes/> .
@prefix organisatie:    </resources/recordtypes/SaaOrganisatie#> .

@prefix dc:             <http://purl.org/dc/elements/1.1/> .
@prefix sh:             <http://www.w3.org/ns/shacl#> .
@prefix dash:           <http://datashapes.org/dash#> .
@prefix memorix:        <http://memorix.io/ontology#> .
@prefix html:           <http://www.w3.org/1999/xhtml/> .

@prefix rico:           <https://www.ica.org/standards/RiC/ontology#> .
@prefix ric-rst:        <https://www.ica.org/standards/RiC/vocabularies/recordSetTypes#> .
@prefix ric-dft:        <https://www.ica.org/standards/RiC/vocabularies/documentaryFormTypes#> .

@prefix pnv:            <https://w3id.org/pnv#> .
@prefix schema:         <http://schema.org/> .

# todo pdr velden toevoegen omtrent oprichtings data

organisatie:identificationGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Identificatie"@nl ;
    sh:order   1.0 .

organisatie:managementGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Beheer"@nl ;
    sh:order   2.0 .

rt:Organisatie
    rdf:type                memorix:Recordtype , rdfs:Class , sh:NodeShape ;
    rdfs:label              "Organisatie"@nl ;
    rdfs:comment            "Stadsarchief recordtype voor Organisatie"@nl ;
    dc:identifier           "SaaOrganisatie" ;
    sh:targetClass          rt:Organisatie ;
    rdfs:subClassOf         rico:CorporateBody ;
    dash:defaultViewForRole dash:all ;
    sh:closed               true ;
    sh:ignoredProperties    ( rdf:type ) ;
    sh:property             [ rdfs:label            "Naam"@nl ;
                              rdfs:comment          "Naam van de organisatie"@nl ;
                              dash:singleLine       true ;
                              memorix:inTitleAt     1.0 ;
                              memorix:searchWeight  3.0 ;
                              sh:datatype           xsd:string ;
                              sh:group              organisatie:identificationGroup ;
                              sh:maxCount           1 ;
                              sh:order              1.0 ;
                              sh:path               schema:name ] ;
    sh:property             [ rdfs:label            "Alternatieve namen"@nl ;
                              memorix:searchWeight  1.0 ;
                              sh:datatype           xsd:string ;
                              sh:group              organisatie:identificationGroup ;
                              sh:order              2.0 ;
                              sh:path               schema:alternateName ] ;
    sh:property             [ rdfs:label            "Interne opmerking"@nl ;
                              dash:editor           dash:TextAreaEditor ;
                              sh:datatype           xsd:string ;
                              sh:group              organisatie:managementGroup  ;
                              sh:order              1.0 ;
                              sh:path               organisatie:remark ; ]
.
