        rdf:type    sh:PropertyGroup;
        rdfs:label  "Geschiedenis"@nl , "History"@en;
        sh:order    4.0 .
  
organisation:rightsGroup
        rdf:type    sh:PropertyGroup;
        rdfs:label  "Rechtenafspraken"@nl , "Rights Agreements"@en;
