@prefix ex:     <http://example.com/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix schema: <https://schema.org/> .
@prefix xsd:      <http://www.w3.org/2001/XMLSchema#> .

ex:dave  a ex:User ;                        #Fails as a :UserShape     
       schema:name       "Dave";
       schema:gender     ex:Unknown ;
       schema:birthDate  1980 ;
       schema:knows      ex:grace .

ex:emily a ex:User ;                        #Fails as a :UserShape          
       schema:name       "Emily", "Emilee";
       schema:gender     schema:Female .

ex:frank a ex:User ;                        #Fails as a :UserShape     
       foaf:name         "Frank" ;
       schema:gender     schema:Male .

_:x    a ex:User;                         #Fails as a :UserShape          
       schema:name       "Unknown" ;
       schema:gender     schema:Male ;
       schema:knows      _:x .